	     Goto see

	Pain.Kick:
		RAN3 A 2 A_FaceTarget
		TNT1 A 0 A_Recoil(5)
        Goto FollowPlayer

	Pain:
	    RAN3 G 3
		TNT1 A 0 A_ChangeFlag("NODROPOFF", 0)
		RAN3 G 3 A_Pain
		Goto FollowPlayer

	Death:
		RAN3 H 4
		TNT1 A 0 //A_CustomMissile ("MuchBlood", 50, 0, random (0, 360), 2, random (0, 160))
		TNT1 A 0 A_ChangeFlag("FRIENDLY", 0)
        RAN3 I 4 A_Scream
		TNT1 A 0 A_SpawnItemEx("RemoveGhost", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
        RAN3 J 4 A_Fall
        RAN3 K 4
		TNT1 A 0 A_ChangeFlag("NOBLOCKMAP", 0)
		TNT1 A 0 //A_SpawnItem ("MediumBloodSpot")
        TNT1 A 0 A_SpawnItemEx ("marine_Ghost_dead", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
		TNT1 A 0
        Stop
	}
}

ACTOR marine_Ghost_dead: SwitchableDecoration
{
	Radius 10
	Height 10
	+USESPECIAL
