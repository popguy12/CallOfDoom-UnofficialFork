	  TNT1 A 0 A_AlertMonsters
      RAN2 E 1 Bright A_CustomBulletAttack (1, 1, 1, 8, "friendbullet") 
	  TNT1 A 0 A_SpawnItem ("556RifleCaseSpawn", 0, 40, 0)
	  TNT1 E 0 A_custommissile("bia_gunflash", 40, 0) 
	  TNT1 A 0 ThrustThing (random(0, 255), random(2, 8))
      RAN2 E 1 
	  
	  RAN2 E 1 A_FaceTarget
		TNT1 A 0 A_JumpIfInTargetInventory("PassClaymore", 1, "See")
		TNT1 A 0 A_JumpIfInTargetInventory("TargetIsAMarine", 1, "FollowPLayer")//
		TNT1 A 0 A_JumpIfInTargetInventory("IsPlayer", 1, "CheckRangeToWait")
	   TNT1 A 0 A_Recoil(1)
	  TNT1 A 0 A_AlertMonsters
      RAN2 E 1 Bright A_CustomBulletAttack (1, 1, 1, 8, "friendbullet") 
	  TNT1 A 0 A_SpawnItem ("556RifleCaseSpawn", 0, 40, 0)
	  TNT1 E 0 A_custommissile("bia_gunflash", 40, 0) 
	  TNT1 A 0 ThrustThing (random(0, 255), random(2, 8))
      RAN2 E 1 
	  
	  RAN2 E 1 A_FaceTarget
		TNT1 A 0 A_JumpIfInTargetInventory("PassClaymore", 1, "See")
		TNT1 A 0 A_JumpIfInTargetInventory("TargetIsAMarine", 1, "FollowPLayer")//
		TNT1 A 0 A_JumpIfInTargetInventory("IsPlayer", 1, "CheckRangeToWait")
	   TNT1 A 0 A_Recoil(1)
	  TNT1 A 0 A_AlertMonsters
      RAN2 E 1 Bright A_CustomBulletAttack (1, 1, 1, 8, "friendbullet") 
	  TNT1 A 0 A_SpawnItem ("556RifleCaseSpawn", 0, 40, 0)
	  TNT1 E 0 A_custommissile("bia_gunflash", 40, 0) 
	  TNT1 A 0 ThrustThing (random(0, 255), random(2, 8))
      RAN2 E 1 
      Goto See
	  
	  
	  Talk:
	     TNT1 A 0 A_PlaySound("USM/talk", 2)
	     Goto see

	AttackMelee:
	TNT1 A 0 A_ChangeFlag("THRUACTORS", 0)
		TNT1 A 0
		RAN2 A 4 A_FaceTarget
		TNT1 A 0 A_Recoil(-4)
		RAN2 A 1 A_FaceTarget
		RAN2 E 4 A_CustomMissile("MarinePunch", 40, 0, 0, 0)
		RAN2 A 2
		Goto See

	
	Pain.Kick:
		RAN2 A 2 A_FaceTarget
		TNT1 A 0 A_Recoil(5)
        Goto FollowPlayer
	
	Pain:
	    RAN2 G 3
		TNT1 A 0 A_ChangeFlag("NODROPOFF", 0)
		TNT1 A 0 A_Recoil(5)
		TNT1 G 0 ThrustThing (random(0, 255), random(2, 8))
		RAN2 G 3 A_Pain
		Goto FollowPlayer

	Death:
		RAN2 H 4
		TNT1 A 0 //A_CustomMissile ("MuchBlood", 50, 0, random (0, 360), 2, random (0, 160))
		TNT1 A 0 A_ChangeFlag("FRIENDLY", 0)
        RAN2 I 4 A_Scream
		TNT1 A 0 A_SpawnItemEx("RemoveSoap", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
        RAN2 J 4 A_Fall
        RAN2 K 4
		TNT1 A 0 A_ChangeFlag("NOBLOCKMAP", 0)
		TNT1 A 0 //A_SpawnItem ("MediumBloodSpot")
        TNT1 A 0 A_SpawnItemEx ("marine_Soap_dead", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
		TNT1 A 0
        Stop
	}
}

