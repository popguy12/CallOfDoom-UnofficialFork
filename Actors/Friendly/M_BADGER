ACTOR Marine1Pathfinder_Badger
{
	Radius 32
	Height 56
	Speed 20
	Health 4000
	PainChance 0
	MaxTargetRange 150
	Monster
	damagefactor "SpawnMarine", 8000.0
	MaxDropOffHeight 1200
	MaxStepHeight 1200
	-COUNTKILL
	+NOTARGET
	+THRUACTORS
	+MISSILEMORE
	+MISSILEEVENMORE
	+FASTER
    +DONTSPLASH
	-SHOOTABLE
	-FRIENDLY
	+NOCLIP
	+LOOKALLAROUND
	+NOINFIGHTING
	States
	{
	Spawn:
	Pain:
    See:
		TNT1 A 0 A_ChangeFlag("FRIENDLY", 0)
		//TNT1 A 0 Thing_ChangeTID(0, 98)
		//TNT1 A 0 Thing_Hate(98, 0, 0)
		TNT1 A 0
		TNT1 A 0 A_GiveInventory("TargetIsAMarine", 1)
		TNT1 AAAAA 1 A_Chase
		//TNT1 A 0 Thing_Hate(98, 0, 0)
		TNT1 A 0
		TNT1 A 0 A_GiveInventory("TargetIsAMarine", 1)
		TNT1 A 1 A_FaceTarget
		Loop
	//Missile:
	TNT1 A 2
	TNT1 A 0 A_SpawnItem("MarineSpawnChecker")	
	TNT1 A 5
	Goto See
	Death:
	Missile:
	    TNT1 A 0
	    TNT1 A 0 A_Recoil(-2)
		TNT1 A 2
		TNT1 A 0 A_Scream
		TNT1 A 0 A_NoBlocking
		TNT1 A 0 A_SpawnItemEx("Marine_Badger_A", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
		TNT1 A 0 A_SpawnItem("TeleportFog")
		Stop
	}
}

ACTOR Marine_Badger
{
    Radius 10
    Height 52
	Scale 1.1
	MONSTER
	-SHOOTABLE
	-COUNTKILL
	-FRIENDLY
	States
    {
    Spawn:
	    TNT1 A 0 A_GiveInventory("PassClaymore", 1)
		AGTH X 10 
		TNT1 A 0 A_PlaySound("MarineFollow", 2)
		AGTH X 10 
		//TNT1 A 0 A_Look
	See:	
		TNT1 A 0 A_GiveToTarget("GivingAmmo", 1)
		TNT1 A 0 A_SpawnItemEx ("Marine_Badger_A", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
        Stop
	
	DontSpawn:
	    AGTH A 1
		Goto Spawn	
    }
}


