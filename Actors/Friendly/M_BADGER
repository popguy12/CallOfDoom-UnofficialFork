		  +CANBOUNCEWATER
        +DontFall
        +Missile
         +DOOMBOUNCE
          +BOUNCEONACTORS
		  +DONTSPLASH
		  Scale 1.1
	States
	{
	Spawn:
		TNT1 A 0 
		Goto Death
	Death:
		AGTH N 1
		Loop
	}
}





ACTOR Marine_Badger_G: Marine_Badger_A
{
	FastSpeed 0
	MaxStepHeight 0
	+FRIENDLY
	+MISSILEMORE
	+NODROPOFF
	+MISSILEEVENMORE
	+THRUACTORS
	Speed 0
	States
	{
	Active:
		TNT1 A 0 A_ChangeFlag("NOBLOCKMAP", 0)
		TNT1 A 0 A_PlaySound("MarineFollow", 2)
		TNT1 A 0 A_CustomMissile ("OrderTitle1", 50, 0, 0, 2, 90)
		TNT1 A 0 A_GiveInventory("PassClaymore", 1)
		TNT1 A 0 A_SpawnItemEx ("Marine_Badger_A", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
		Stop
		
	Spawn:
		TNT1 A 0 A_GiveInventory("PassClaymore", 1)
		TNT1 A 0
		TNT1 A 0 A_ChangeFlag("THRUACTORS", 0)
		TNT1 A 0 A_ChangeFlag("FRIENDLY", 1)
		TNT1 A 0 A_GiveInventory("TargetIsAMarine")
		AGTH A 20
		AGTH D 1 A_Look
		Goto See
		
	See:	
		//TNT1 A 0 A_SetAngle(random(90, -90) + angle)
		TNT1 A 0 A_ChangeFlag("SHOOTABLE", 0)
		TNT1 A 0 A_ChangeFlag("SOLID", 0)
		AGTH CCCCCCCCCCCCCC 1 A_Chase
		TNT1 A 0 A_ClearTarget
		Loop
	
		
	Missile:
        //PLAY E 1
		TNT1 A 0 A_ChangeFlag("FRIENDLY", 1)
		TNT1 A 0 A_SpawnItem("KillMeSmall")
		TNT1 A 0 A_ChangeFlag("SHOOTABLE", 1)
		TNT1 A 0 A_ChangeFlag("SOLID", 1)
		TNT1 A 0 A_ChangeFlag("NODROPOFF", 1)
		TNT1 A 0 A_JumpIfInTargetInventory("TargetIsAMarine", 1, "See")
		TNT1 A 0 A_JumpIfInTargetInventory("IsPlayer", 1, "See")
		TNT1 A 0 A_PlaySound("MRNAT", 2)
		
       AGTH E 1 A_FaceTarget
	   TNT1 A 0 A_Recoil(2)
	  TNT1 E 0 A_custommissile("bia_gunflash", 30, 0) 
     AGTH F 1 Bright A_CustomBulletAttack (3, 3, 1, 3, "friendbullet") 
	  TNT1 A 0 A_SpawnItem ("HVHGCaseSpawn", 0, 30, 0)
	  TNT1 E 0 A_Jump(16, "see")
	  TNT1 A 0 A_JumpIfCloser(300, "Shotchange2")
      AGTH E 1 A_CPosRefire 
      Goto Missile
	  
	  Shotchange2:
	  AGTH E 1 A_FaceTarget
	  TNT1 A 0 A_Recoil(5)
	  TNT1 E 0 A_custommissile("bia_gunflash", 30, 0) 
      AGTH F 1 Bright A_CustomBulletAttack (3, 3, 1, 3, "friendbullet") 
	  TNT1 A 0 A_SpawnItem ("HVHGCaseSpawn", 0, 30, 0)
	  TNT1 A 0 A_Recoil(5)
	  TNT1 E 0 A_Jump(16, "see")
      AGTH E 1 A_CPosRefire 
      Goto Missile
	
	Pain.Kick:
		AGTH A 2 A_FaceTarget
		TNT1 A 0 A_Recoil(5)
        Goto See
			
		
	Pain:
	    AGTH G 3
		AGTH G 3 A_Pain
		Goto See
	}
}


