	  C1NA E 2 A_FaceTarget
	  TNT1 A 0 A_JumpIfInTargetInventory("PassClaymore", 1, "See")
	  TNT1 A 0 //A_Recoil(2)
	  TNT1 A 0 A_AlertMonsters
      C1NA E 1 Bright A_CustomBulletAttack (3, 3, 6, 5, "friendbullet") 
	  TNT1 A 0 A_SpawnItem ("BigShotCaseSpawn", 0, 40, 0)
	  TNT1 E 0 A_custommissile("bia_gunflash", 40, 0) 
      C1NA E 3 
	  TNT1 A 0 A_JumpIfCloser(200, "Shotchange2")
	  TNT1 A 0 ThrustThing (random(0, 255), random(2, 8))
      C1NA E 3 ThrustThingZ(0, 3, 0, 0)
	  TNT1 A 0 //A_Recoil(2)
      Goto See
	  
	  Shotchange2:
	  TNT1 A 0 A_ChangeFlag("THRUACTORS", 0)
	  //PLAY E 1
	  TNT1 A 0 A_ChangeFlag("NODROPOFF", 1)
	  TNT1 A 0 A_SpawnItem("KillMeSmall")
	  TNT1 A 0 A_JumpIfInTargetInventory("TargetIsAMarine", 1, "FollowPLayer")//
      TNT1 A 0 A_JumpIfInTargetInventory("IsPlayer", 1, "CheckRangeToWait")
	  TNT1 A 0 A_ChangeFlag("SHOOTABLE", 1)
	  TNT1 A 0 A_ChangeFlag("SOLID", 1)
	  C1NA E 2 A_FaceTarget
	  TNT1 A 0 A_JumpIfInTargetInventory("PassClaymore", 1, "See")
	  TNT1 A 0 A_Recoil(4)
	  TNT1 A 0 A_AlertMonsters
      C1NA E 1 Bright A_CustomBulletAttack (3, 3, 6, 5, "friendbullet") 
	  TNT1 A 0 A_SpawnItem ("BigShotCaseSpawn", 0, 40, 0)
	  TNT1 E 0 A_custommissile("bia_gunflash", 40, 0) 
      C1NA E 6 A_Recoil(2)
	  TNT1 A 0 ThrustThing (random(0, 255), random(2, 8))
      C1NA E 3 ThrustThingZ(0, 3, 0, 0)
	  TNT1 A 0 A_Recoil(4)
      Goto See
		
	  
	  Talk:
	     TNT1 A 0 A_PlaySound("RVY/shot", 2)
	     Goto see
	
	  
	AttackMelee:
	TNT1 A 0 A_ChangeFlag("THRUACTORS", 0)
		TNT1 A 0
		C1NA A 4 A_FaceTarget
		TNT1 A 0 A_Recoil(-4)
		C1NA A 1 A_FaceTarget
		C1NA E 4 A_CustomMissile("MarinePunch", 40, 0, 0, 0)
		C1NA A 2
		Goto See

	
	Pain.Kick:
		C1NA A 2 A_FaceTarget
		TNT1 A 0 A_Recoil(5)
        Goto FollowPlayer
			
		
	Pain:
	    C1NA G 3
		TNT1 A 0 A_ChangeFlag("NODROPOFF", 0)
		C1NA G 3 A_Pain
		Goto FollowPlayer



	Death:
        C1NA H 4
		TNT1 A 0 //A_CustomMissile ("MuchBlood", 50, 0, random (0, 360), 2, random (0, 160))
		TNT1 A 0 A_ChangeFlag("FRIENDLY", 0)
        C1NA I 4 A_Scream
		TNT1 A 0 //A_SpawnItemEx("RemoveChina", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
        C1NA J 4 A_Fall
        C1NA K 4
		TNT1 A 0 //A_SpawnItem ("MediumBloodSpot")
		TNT1 A 0 A_SpawnItemEx ("marine_China_dead", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
        Stop
	}
}

