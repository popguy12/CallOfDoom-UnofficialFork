    {
    Spawn:
	    TNT1 A 0 A_GiveInventory("PassClaymore", 1)
		MRYL U 12 
		TNT1 A 0 A_PlaySound("RENA/ac1", 2)
		MRYL TV 12
		//TNT1 A 0 A_Look
	See:	
		//TNT1 A 0 A_GiveToTarget("NumberOfAllies", 1)
		TNT1 A 0 A_SpawnItemEx ("Marine_Meryl_A", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
        Stop
	
	DontSpawn:
	    MRYL A 1
		Goto Spawn	
    }
}

