	    TNT1 A 0 A_TakefromTarget("FragGrenadeAmmo", 1)	
		MRYL E 30 A_FaceTarget
		TNT1 E 0 A_CustomMissile ("FriendGiveAmmo_45ACP", 32, 0, 0, 0, 35) 
		MRYL E 30
		Goto Waits
		
	GiveStim:
	    TNT1 A 0 A_TakefromTarget("StunGrenadeInventory", 1)	
		TNT1 A 0 A_TakefromTarget("Stimcall", 1)
		MRYL E 30 A_FaceTarget
		TNT1 E 0 A_CustomMissile ("FriendGiveStimpack", 32, 0, 0, 0, 35) 
		MRYL E 30
		Goto Waits
	
	Missile:
	TNT1 A 0 A_ChangeFlag("THRUACTORS", 0)
        //PLAY E 1
		TNT1 A 0 A_ChangeFlag("NODROPOFF", 1)
		TNT1 A 0 A_SpawnItem("KillMeSmall")
		TNT1 A 0 A_JumpIfInTargetInventory("TargetIsAMarine", 1, "FollowPLayer")//
		TNT1 A 0 A_JumpIfInTargetInventory("IsPlayer", 1, "CheckRangeToWait")
		TNT1 A 0 A_ChangeFlag("SHOOTABLE", 1)
		TNT1 A 0 A_ChangeFlag("SOLID", 1)
		TNT1 E 0 A_Jump(3, "Talk")
		
	  MRYL E 2 A_FaceTarget
	  TNT1 A 0 A_JumpIfInTargetInventory("PassClaymore", 1, "See")
	  TNT1 A 0 A_JumpIfInTargetInventory("TargetIsAMarine", 1, "FollowPLayer")//
		TNT1 A 0 A_JumpIfInTargetInventory("IsPlayer", 1, "CheckRangeToWait")
	  TNT1 A 0 //A_Recoil(2)
	  TNT1 A 0 A_AlertMonsters
      MRYL E 1 Bright A_CustomBulletAttack (1, 1, 1, 4, "friendbullet") 
	  TNT1 A 0 A_SpawnItem ("556RifleCaseSpawn", 0, 40, 0)
	  TNT1 E 0 A_custommissile("bia_gunflash", 40, 0) 
      //MRYL E 1 
      MRYL E 1 A_CPosRefire 
	  TNT1 A 0 //A_Recoil(2)
      Goto Missile
	
	  Talk:
	     TNT1 A 0 A_PlaySound("RENA/talk", 2)
	     Goto see

	AttackMelee:
	TNT1 A 0 A_ChangeFlag("THRUACTORS", 0)
		TNT1 A 0
		MRYL A 4 A_FaceTarget
		TNT1 A 0 A_Recoil(-4)
		MRYL A 1 A_FaceTarget
		MRYL E 4 A_CustomMissile("MarinePunch", 40, 0, 0, 0)
		MRYL A 2
		Goto See

	
	Pain.Kick:
		MRYL A 2 A_FaceTarget
		TNT1 A 0 A_Recoil(5)
        Goto FollowPlayer

	Pain:
	    MRYL G 3
		TNT1 A 0 A_ChangeFlag("NODROPOFF", 0)
		MRYL G 3 A_Pain
		Goto FollowPlayer

	Death:
        MRYL H 4
		TNT1 A 0 //A_CustomMissile ("MuchBlood", 50, 0, random (0, 360), 2, random (0, 160))
		TNT1 A 0 A_ChangeFlag("FRIENDLY", 0)
        MRYL I 4 A_Scream
		TNT1 A 0 A_SpawnItemEx("RemoveMeryl", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
        MRYL J 4 A_Fall
        MRYL K 4
		TNT1 A 0 //A_SpawnItem ("MediumBloodSpot")
		TNT1 A 0 A_SpawnItemEx ("marine_Meryl_dead", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
        Stop
	}
}

ACTOR marine_Meryl_dead: SwitchableDecoration
{
	Radius 10
	Height 10
	+USESPECIAL
	Speed 0
	Activation THINGSPEC_Activate
	Scale 1.0
	States
	{
	Spawn:
		MRYL L 1 Bright
		MRYL L -1 Bright
		Stop
	//Use:
	//Special:
	Active:
		TNT1 A 0 A_NoBlocking
		TNT1 A 0 A_Scream
		TNT1 A 0 A_PlaySound("BERSPKUP")
		MRYL LKJIH 3
		TNT1 A 0 A_SpawnItemEx("ReviveMerylActivate", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
		TNT1 A 0 A_SpawnItemEx("Marine_Meryl_A", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
		TNT1 A 1
		Stop
	}
}

ACTOR Marine_Meryl_G: Marine_Meryl_A
{
	FastSpeed 0
	MaxStepHeight 0
	+FRIENDLY
	+MISSILEMORE
	+NODROPOFF
	+MISSILEEVENMORE
	+THRUACTORS
	Speed 0
	States
	{
	Active:
		TNT1 A 0 A_ChangeFlag("NOBLOCKMAP", 0)
		TNT1 A 0 A_PlaySound("RENA/ac", 2)
		TNT1 A 0 A_CustomMissile ("OrderTitle1", 50, 0, 0, 2, 90)
		TNT1 A 0 A_GiveInventory("PassClaymore", 1)
		TNT1 A 0 A_SpawnItemEx ("Marine_Meryl_A", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
		Stop
		
	Spawn:
		TNT1 A 0 A_GiveInventory("PassClaymore", 1)
		TNT1 A 0
		TNT1 A 0 A_ChangeFlag("FRIENDLY", 1)
		TNT1 A 0 A_GiveInventory("TargetIsAMarine")
		TNT1 A 0 A_ChangeFlag("THRUACTORS", 0)
		MRYL V 20
		MRYL V 1 A_Look
		Goto See
		
	See:	
		//TNT1 A 0 A_SetAngle(random(90, -90) + angle)
		TNT1 A 0 A_ChangeFlag("SHOOTABLE", 0)
		TNT1 A 0 A_ChangeFlag("SOLID", 0)
		MRYL FFFFFFFFFFFF 1 A_Chase
		TNT1 A 0 A_ClearTarget
		Loop

	Missile:
        //PLAY E 1
		TNT1 A 0 A_ChangeFlag("FRIENDLY", 1)
		TNT1 A 0 A_ChangeFlag("SHOOTABLE", 1)
		TNT1 A 0 A_ChangeFlag("SOLID", 1)
		TNT1 A 0 A_ChangeFlag("NODROPOFF", 1)
		TNT1 A 0 A_SpawnItem("KillMeSmall")
		TNT1 A 0 A_JumpIfInTargetInventory("TargetIsAMarine", 1, "See")
		TNT1 A 0 A_JumpIfInTargetInventory("IsPlayer", 1, "See")
		TNT1 E 0 A_Jump(3, "Talk")
		
      MRYL F 2 A_FaceTarget
	  TNT1 A 0 A_JumpIfInTargetInventory("PassClaymore", 1, "See")
	  TNT1 A 0 //A_Recoil(2)
	  TNT1 A 0 A_AlertMonsters
      MRYL F 1 Bright A_CustomBulletAttack (1, 1, 1, 7, "friendbullet") 
	  TNT1 A 0 A_SpawnItem ("556RifleCaseSpawn", 0, 10, 0)
	  TNT1 E 0 A_custommissile("bia_gunflash", 10, 0) 
      //MRYL F 2 
      MRYL F 1 A_CPosRefire 
	  TNT1 A 0 //A_Recoil(2)
      Goto Missile
	  
	  Talk:
	     TNT1 A 0 A_PlaySound("RENA/talk", 2)
	     Goto see
	
	Pain.Kick:
		MRYL A 2 A_FaceTarget
		TNT1 A 0 A_Recoil(5)
        Goto See
			
		
	Pain:
	    MRYL G 3
		MRYL G 3 A_Pain
		TNT1 A 0 A_Recoil(2)
	    TNT1 A 0 ThrustThingZ(0, 3, 0, 0)
		Goto See
	}
}