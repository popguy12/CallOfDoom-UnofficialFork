ACTOR Glock18C_Pickup : CustomInventory
{
  inventory.pickupmessage "[1] Glock 18C Gen.3 9x19 machine pistol"
  inventory.pickupsound "nothing"
  +INVENTORY.AUTOACTIVATE
  +DONTGIB
  inventory.respawntics 35
  scale 0.16
  States
  {
  Spawn:
    B004 Q -1
    Stop
  Pickup:
    GNEX A 0
	GUNP A 0 A_JumpIfInventory("Glock18C", 1, "failPickup")  //Do you have this?
	GUNP A 0 A_JumpIfInventory("Mulekick", 1, 2)         //Are you using unlimited mode?
	GUNP A 0 A_JumpIfInventory("gunSUBSV", 0, "notPickup") //Do you have space in your inventory?
	GUNP A 0 A_GiveInventory("gunSUBSV", 1) 
	TNT1 A 0 A_PlaySound("misc/w_pkup")      //Pick up!
	GUNP A 0 A_GiveInventory("Glock18C", 1)      //weapon
	GUNP A 0 A_GiveInventory("Glock18CClip", 50) //clip
    TNT1 A 0 A_TakeInventory("Glock18CEmpty", 1) //no reload
	GNEX A 0 ACS_NamedExecuteWithResult("CoDNewWeapon", 26, 0, 0)
	GUNP A 0 //A_SelectWeapon("Glock18C")
    Stop
  FailPickup:
    B004 Q -1
    fail
  notPickup:
    TNT1 A 0 ACS_NamedExecuteWithResult("CoDNotPickup", 26, 0, 0)
    B004 Q -1
    fail
  }
}

