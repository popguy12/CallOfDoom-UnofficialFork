}

actor Glock18C : RGUWeapon
{
  Obituary "%o was shot down by %k's Glock18C."
  inventory.pickupmessage "[1] Glock 18C Gen.3 9x19 machine pistol"
  inventory.pickupsound "misc/w_pkup" 
  weapon.selectionorder 3
  tag "Glock18C"
  weapon.ammotype "Glock18CClip"
  weapon.ammouse 1
  weapon.ammotype2 "Ammo9mm"
  States
  {
  Spawn:
  B004 Q 0
	TNT1 A 0 A_PlaySound("WeaponDropped") 
    TNT1 A 2
	TNT1 A 0 A_SpawnItemEx ("RemoveSlot1", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
	TNT1 A 0 A_SpawnItemEx ("RemoveGlock18C", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
	TNT1 A 0 A_SpawnItemEx ("DropWeapon_Glock18C", 20, 0, 20, 10, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
    stop
  Select:
    TNT1 A 1 A_Raise
    TNT1 AA 0 A_Raise
    loop
  Ready:
   TNT1 A 0 A_TakeInventory("Weight", 0)
	TNT1 A 0 A_GiveInventory("Weight", 2)	//Determines player speed - 3 means slower speed
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 56, 0, 0)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDFireSelectIcon", 99, 0, 0)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDScopeSelectIcon", 99, 0, 0)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDFireSelect", 12, 0, 0)
	TNT1 A 0 A_TakeInventory("BOSelectScope", 1)
	TNT1 A 0 A_TakeInventory("BOSelectFire", 1)
	TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
	TNT1 A 0 A_TakeInventory("BOWeaponlooking", 1)
	TNT1 A 0 A_TakeInventory("Reloading", 1)
	TNT1 A 0 A_TakeInventory("Aiming", 1)
	GUNP A 0 //ACS_NamedExecuteWithResult("CoDWeaponIcon", 26, 0, 0)
	TNT1 A 0 A_ZoomFactor(1.0, ZOOM_INSTANT)
    TNT1 A 0 A_SetCrosshair(0)
    TNT1 A 0 A_JumpIfInventory("Perk1_SOH_Pro", 1, "GiveSOHSelect")
    G18A A 1 A_PlayWeaponSound("mp412/select")
	G18A BCDEGH 1
    //goto InHand 				-- intentional drop to next state
  InHand: 					//Ready state
    G18A F 0 A_JumpIfNoAmmo("Reload")
    G18A F 0 A_JumpIfInventory("Aiming", 1, "Aiming")
    G18A F 0 A_JumpIfInventory("Reloading", 1, "Reload")
    G18A F 0 A_JumpIfInventory("ThrowingGrenade", 1, "KnifeAttack")
    G18A F 0 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	TNT1 A 0 A_JumpIfInventory("BOSelectFire", 1, "FireSet")
	TNT1 A 0 A_JumpIfInventory("BOWeaponlook", 1, "Weaponlook")
	TNT1 A 0 A_JumpIfInventory("BONVstart", 1, "NightVisionON") //
	GUNP A 0 //ACS_NamedExecuteWithResult("CoDWeaponIcon", 26, 0, 0)
    G18A F 1 A_WeaponReady(WRF_ALLOWRELOAD)
	Goto CheckFiremode 
  Friendcallup:
    TNT1 A 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    TNT1 A 0 A_GiveInventory("Followcall", 1)
    TNT1 A 0 A_TakeInventory("Aiming", 1)
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    TNT1 A 0 A_PlaySound("NEEDCOME")
    FRGE IHGFGHI 2
    TNT1 A 10
    TNT1 A 0 A_TakeInventory("KnifeAttack", 1)
    TNT1 A 0 A_TakeInventory("Followcall", 1)
    TNT1 A 0 A_TakeInventory("BOFriendcall", 1)
    Goto Ready2+2
  Ready2:
    TNT1 A 0 //A_GiveInventory("Weight", 3)	
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    TNT1 A 0 A_JumpIfInventory("Perk1_SOH_Pro", 1, "GiveSOHSelect")
    TNT1 A 0 A_PlayWeaponSound("mp412/select")
    G18A ABCDEGH 1 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    goto InHand

  CheckFiremode:
   ACRA F 0
   ACRA F 0 A_JumpIfInventory("Glock18C_FireSet", 1, 2)
   ACRA F 0 //ACS_NamedExecuteWithResult("CoDFireSelectIcon", 1, 0, 0)//Full
   Goto CheckScopemode
   ACRA F 0 //ACS_NamedExecuteWithResult("CoDFireSelectIcon", 9, 0, 0)//Rapid
   Goto CheckScopemode

  CheckScopemode:
   ACRA F 0
   ACRA F 0 //A_JumpIfInventory("AN94_Scope", 1, 2)
   ACRA F 0 //ACS_ExecuteWithResult(995, 1, 0, 0)//x3
   Goto Inhand
   ACRA F 0 //ACS_ExecuteWithResult(995, 2, 0, 0)//Dot
   Goto Inhand

  FireSet:
    TNT1 A 0 
	TNT1 A 0 A_JumpIfInventory("Glock18C_FireSet", 1, "FireSetoff")   
    TNT1 A 0 A_PlaySoundEx("FAL/set", "SoundSlot5")
	//TNT1 A 0 ACS_ExecuteWithResult(894, 9, 0, 0)
	ACRA F 0 ACS_NamedExecuteWithResult("CoDFireSelect", 4, 0, 0)//Semi
	TNT1 A 0 A_TakeInventory("BOSelectFire", 1)
    TNT1 A 0 A_GiveInventory("Glock18C_FireSet", 1)
    goto InHand
  FireSetoff:
    TNT1 A 0 
    TNT1 A 0 A_PlaySoundEx("FAL/set", "SoundSlot5")
	//TNT1 A 0 ACS_ExecuteWithResult(894, 1, 0, 0)
	ACRA F 0 ACS_NamedExecuteWithResult("CoDFireSelect", 1, 0, 0)//Full
	TNT1 A 0 A_TakeInventory("BOSelectFire", 1)
    TNT1 A 0 A_TakeInventory("Glock18C_FireSet", 1)
    goto InHand
	
	  NightVisionON:
    TNT1 A 0 
	TNT1 A 0 A_TakeInventory("Aiming", 1)
	TNT1 A 0 A_ZoomFactor(1.0, ZOOM_INSTANT)
    TNT1 A 0 A_SetCrosshair(0)
	TNT1 A 0 A_JumpIfInventory("NightVisionActive", 1, "NightVisionOFF")   
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
    TNT1 A 0 A_PlaySoundEx("g36c/reload1", "SoundSlot5")
	BONV ABCDEFGHIJKLM 2
	BONV N 6
	TNT1 A 0 A_PlaySoundEx("BONVactive", "SoundSlot6")
	TNT1 A 0 A_GiveInventory("Infrared_COD", 1)
	TNT1 A 0 A_GiveInventory("NightVisionActive", 1)
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
    goto ready2
  NightVisionOFF:
    TNT1 A 0 
	TNT1 A 0 A_TakeInventory("Infrared_COD", 0)
	TNT1 A 0 A_TakeInventory("PowerLightAmp", 0)
	TNT1 A 0 A_TakeInventory("NightVisionActive", 0)
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
    TNT1 A 0 A_PlaySoundEx("weapon/select", "SoundSlot5")
	BONV NMLKJIHGFEDCBA 2
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
    goto ready2
	
  Weaponlook:
    TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
	TNT1 A 0 A_TakeInventory("Aiming", 1)
  Weaponlooking: 	
    TNT1 A 0 A_GiveInventory("BOWeaponlooking", 1)
    ACRA F 0 A_JumpIfInventory("Aiming", 1, "WeaponlookEND")
    ACRA F 0 A_JumpIfInventory("Reloading", 1, "WeaponlookEND")
    ACRA F 0 A_JumpIfInventory("ThrowingGrenade", 1, "WeaponlookEND")
    ACRA F 0 A_JumpIfInventory("KnifeAttack", 1, "WeaponlookEND")
	ACRA F 0 A_JumpIfInventory("BOWeaponlook", 1, "WeaponlookEND")
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 26, 0, 0)
    G18A F 1 A_WeaponReady(WRF_ALLOWRELOAD)
    loop 
  WeaponlookEND:
    TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 56, 0, 0)
    TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
    TNT1 A 0 A_TakeInventory("BOWeaponlooking", 1)
    goto InHand
   
  Aiming:
    G18C D 0 A_JumpIfInventory("Reloading", 1, "Reload")    
    G18C D 0 A_JumpIfInventory("ThrowingGrenade", 1, "KnifeAttack")
    G18C D 0 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	ACRA F 0 A_JumpIfInventory("BOSelectFire", 1, "FireSet")
    G18C D 1 A_GunFlash
	G18C D 1 A_WeaponReady(WRF_NOBOB|WRF_ALLOWRELOAD)
	TNT1 F 0 
    loop
  Deselect:
    TNT1 A 0 A_TakeInventory("Weight", 0)	//Determines player speed - 1 means normal speed
    TNT1 A 0 A_TakeInventory("Aiming", 1)
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    TNT1 A 0 A_TakeInventory("Reloading", 1)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 56, 0, 0)
	TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
    TNT1 A 0 A_TakeInventory("BOWeaponlooking", 1)
    TNT1 A 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    TNT1 A 0 A_JumpIfInventory("Perk1_SOH_Pro", 1, "GiveSOHDeselect")
    G18A HGEDCBA 1
  DeselectFull: 				//Deselect
    TNT1 AA 0 A_Lower
    TNT1 A 1 A_Lower
    loop  
  Fire:
    ACRA F 0 A_JumpIfInventory("BOWeaponlooking", 1, "WeaponlookEND")
    G18A F 0 A_JumpIfInventory("Aiming", 1, "FireAim")
    G18A F 0 A_JumpIfNoAmmo("ReloadStart")
	TNT1 A 0 A_JumpIfInventory("Glock18C_FireSet", 1, "FireSemi")  
    G18B A 0 A_FireCustomMissile("Glock18CPuff", 0, 0, 13, -2)   //Fire effect and sound
	TNT1 A 0 A_PlayWeaponSound("Glock18C/fire2")
	TNT1 A 0 A_PlaySoundEx("Glock18C/fire1", "SoundSlot5")
    TNT1 A 0 A_PlaySoundEx("Glock18C/fire3", "SoundSlot6")
	G18B A 1 A_FireBullets(2.8, 2.8, -1, 13, "HitPuff", 1, 1800)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", 5, 0, 8, -3)
    BREB B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 240, 10*Random (3, 4), 0)
    G18B B 1 
    G18B C 0 A_JumpIfNoAmmo("FireEmpty")
    G18B A 0 A_JumpIfInventory("Ammo9mm", 1, 2)
    G18B CD 1 A_ReFire
    goto InHand
    G18B A 0 A_JumpIfNoAmmo(2)
    G18B A 0 A_ReFire
    goto InHand
    G18B A 0 A_GiveInventory("Glock18CEmpty", 1)		//Go to reload
    goto Reload
  FireSemi:
    G18A F 0 A_JumpIfInventory("Aiming", 1, "FireAim")
    G18A F 0 A_JumpIfNoAmmo("ReloadStart")
    G18B A 0 A_FireCustomMissile("Glock18CPuff", 0, 0, 13, -2)   //Fire effect and sound
	TNT1 A 0 A_PlayWeaponSound("Glock18C/fire2")
	TNT1 A 0 A_PlaySoundEx("Glock18C/fire1", "SoundSlot5")
    TNT1 A 0 A_PlaySoundEx("Glock18C/fire3", "SoundSlot6")
	G18B A 1 A_FireBullets(0.1, 0.1, -1, 13, "HitPuff", 1, 1800)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", 5, 0, 8, -3)
    G18B B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 170, 170, 8)		//Recoil script - 600 recoil, revert aim
    G18B BC 1 
    G18B D 0 A_JumpIfNoAmmo("FireEmpty")
    G18B A 0 A_JumpIfInventory("Ammo9mm", 1, 2)
    G18B D 1 A_ReFire
    goto InHand
    G18B A 0 A_JumpIfNoAmmo(2)
    G18B A 0 A_ReFire
    goto InHand
    G18B A 0 A_GiveInventory("Glock18CEmpty", 1)		//Go to reload
    goto Reload
  FireEmpty:
    G18B D 1 
    G18A F 1 A_PlayWeaponSound("weapon/dryfire")
    G18B A 0 A_JumpIfNoAmmo(2)
    G18B A 0 A_ReFire
    goto InHand
    G18B A 0 A_GiveInventory("Glock18CEmpty", 1)		//Go to reload
    goto Reload
  FireAim:
    G18C D 0 A_JumpIfNoAmmo("ReloadStart")
	TNT1 A 0 A_JumpIfInventory("Glock18C_FireSet", 1, "FireAimSemi")  
    M4AD A 0 A_FireCustomMissile("Glock18CPuff", 0, 0, 0, -4)   //Fire effect and sound
	TNT1 A 0 A_PlayWeaponSound("Glock18C/fire2")
	TNT1 A 0 A_PlaySoundEx("Glock18C/fire1", "SoundSlot5")
    TNT1 A 0 A_PlaySoundEx("Glock18C/fire3", "SoundSlot6")
    G18D A 1 A_FireBullets(0.4, 0.8, -1, 13, "HitPuff", 1, 1800)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", -2, 0, 0, -3)
    BREB B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 190, 10*Random (3, 4), 0)
    G18D B 1 A_GunFlash
    G18D C 0 A_JumpIfNoAmmo("FireEmptyAim")
    M4AD A 0 A_JumpIfInventory("Ammo9mm", 1, 2)
    G18D CD 1 A_ReFire
    goto InHand
    M4AD A 0 A_JumpIfNoAmmo(2)
    M4AD A 0 A_ReFire
    goto InHand
    M4AD A 0 A_GiveInventory("Glock18CEmpty", 1)		//Go to reload
    goto Reload
  FireAimSemi:
    G18C D 0 A_JumpIfNoAmmo("ReloadStart")
    M4AD A 0 A_FireCustomMissile("Glock18CPuff", 0, 0, 0, -4)   //Fire effect and sound
	TNT1 A 0 A_PlayWeaponSound("Glock18C/fire2")
	TNT1 A 0 A_PlaySoundEx("Glock18C/fire1", "SoundSlot5")
    TNT1 A 0 A_PlaySoundEx("Glock18C/fire3", "SoundSlot6")
    G18D A 1 A_FireBullets(0.0, 0.0, -1, 13, "HitPuff", 1, 1800)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", -2, 0, 0, -3)
    M4AD B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 170, 170, 8)		//Recoil script - 600 recoil, revert aim
    G18D BC 1 A_GunFlash
    M4AD D 0 A_JumpIfNoAmmo("FireEmptyAim")
    M4AD A 0 A_JumpIfInventory("Ammo9mm", 1, 2)
    G18D D 1 A_ReFire
    goto InHand
    M4AD A 0 A_JumpIfNoAmmo(2)
    M4AD A 0 A_ReFire
    goto InHand
    M4AD A 0 A_GiveInventory("Glock18CEmpty", 1)		//Go to reload
    goto Reload
  FireEmptyAim:
    G18C D 0 A_PlayWeaponSound("weapon/dryfire")
    M4AD A 0 A_JumpIfNoAmmo(2)
    M4AD A 0 A_ReFire
    goto InHand
    M4AD A 0 A_GiveInventory("Glock18CEmpty", 1)		//Go to reload
    goto Reload
	
  Hold:
    TNT1 A 0 A_JumpIfInventory("Glock18C_FireSet", 1, "HoldSemi")  
	G18A F 0 A_JumpIfInventory("Aiming", 1, "HoldAim")
    G18A F 0 A_JumpIfInventory("ThrowingGrenade", 1, "KnifeAttack")
    G18A F 0 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	TNT1 F 0 
    goto Fire
  HoldSemi:
    M27A F 0 A_JumpIfInventory("Aiming", 1, "HoldAimSemi")
    G18A F 1 
    M27A F 0 A_JumpIfInventory("ThrowingGrenade", 1, "KnifeAttack")
    M27A F 0 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	G18A F 1 A_ReFire
    goto Inhand
  HoldAim:
    G18C D 0
	TNT1 F 0 
    goto FireAim
  HoldAimSemi:
	G18C D 1 A_GunFlash
    M27C D 0
	G18C D 1 A_ReFire
    goto Aiming
	
	
  AltFire:	//Aim
    ACRA F 0 A_JumpIfInventory("BOWeaponlooking", 1, "WeaponlookEND")
    G18C A 0 A_JumpIfInventory("Aiming", 1, "AltFire2")
    G18C A 0 A_ZoomFactor(1.4)	
    TNT1 A 0 A_SetCrosshair(41)
    G18C ABCE 1
	G18C F 1 A_GunFlash
    G18C D 0 A_GiveInventory("Aiming", 1)
    G18C D 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    G18A F 0 A_ReFire
    goto Aiming
  AltFire2:
    G18C D 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
	G18C FECBA 1
    G18C A 0 A_TakeInventory("Aiming", 1)
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
	TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
    G18C A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    G18A F 0 A_ReFire
    goto InHand
	
  AltFire_QD:	//Aim with QuickDraw
    G18C A 0 A_JumpIfInventory("Aiming", 1, "AltFire2_QD")
    G18C A 0 A_ZoomFactor(1.4)
    TNT1 A 0 A_SetCrosshair(41)
    G18C ABCD 1
    G18C D 0 A_GiveInventory("Aiming", 1)
    G18C D 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    G18A F 0 A_ReFire
    goto Aiming
  AltFire2_QD:
    G18C D 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    G18C DCBA 1
    G18C A 0 A_TakeInventory("Aiming", 1)
    G18C A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    G18A F 0 A_ReFire
    goto InHand
  AltHold:
    G18A F 1 A_JumpIfInventory("Aiming", 1, "AltHoldAim")
	TNT1 F 0 
    G18A F 1 A_ReFire
    goto InHand
  AltHoldAim:
    G18C D 1 A_GunFlash
	TNT1 F 0 
    G18C D 1 A_ReFire
    goto Aiming
	
  ReloadStartAim:
    G18C D 1 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
	G18C FECBA 1
    G18C A 0 A_TakeInventory("Aiming", 1)
    G18C A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    goto ReloadStart+1
   Reload:
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    TNT1 A 0 A_JumpIfInventory("Glock18CClip", 0, "InHand")
    TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 56, 0, 0)
    TNT1 A 0 A_JumpIfInventory("Ammo9mm", 1, "ReloadStart")
	TNT1 A 0 A_JumpIfInventory("Aiming", 1, "AltFire2")
	//TNT1 A 0 A_JumpIfInventory("Glock18CEmpty", 1, "EmpInHandR")
    goto InHand+3
  ReloadStart:
    G18E A 0 A_JumpIfInventory("Aiming", 1, "ReloadStartAim")
    G18E A 0 A_JumpIfInventory("Glock18CEmpty", 1, "ReloadStartEmpty")
	G18E A 0 A_WeaponReady(WRF_NOFIRE)
    G18E ABCDEFGH 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	G18E I 0 A_PlayWeaponSound("Glock18C/reload1")
	G18E A 0 A_WeaponReady(WRF_NOFIRE)
	G18E IJKLMNOPQRSTUVWXYZ 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	G18F ABCDE 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	G18E E 0 A_PlayWeaponSound("Glock18C/reload2")
    goto ReloadAmmo
  ReloadAmmo:
    TNT1 A 0 A_GiveInventory("Glock18CClip", 1)
    TNT1 A 0 A_TakeInventory("Ammo9mm", 1)
    TNT1 A 0 A_JumpIfInventory("Glock18CClip", 0, "ReloadEnd")
    TNT1 A 0 A_JumpIfInventory("Ammo9mm", 1, "ReloadAmmo")
    goto ReloadEnd
  ReloadEnd:
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    G18E A 0 A_WeaponReady(WRF_NOFIRE)
	G18F FGHIJKLMNOP 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    TNT1 A 0 A_ReFire
    goto InHand
  ReloadStartEmpty:
    G18E A 0 A_WeaponReady(WRF_NOFIRE)
    G18G ABCDEFG 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	G18E I 0 A_PlayWeaponSound("Glock18C/reload3")
	G18E A 0 A_WeaponReady(WRF_NOFIRE)
	G18G HIJKLMN 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	G18G OPQRST 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	G18G UVW 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	G18E E 0 A_PlayWeaponSound("Glock18C/reload2")
    goto ReloadAmmoEmpty
  ReloadAmmoEmpty:
    TNT1 A 0 A_GiveInventory("Glock18CClip", 1)
    TNT1 A 0 A_TakeInventory("Ammo9mm", 1)
    TNT1 A 0 A_JumpIfInventory("Glock18CClip", 50, "ReloadEndEmpty")
    TNT1 A 0 A_JumpIfInventory("Ammo9mm", 1, "ReloadAmmoEmpty")
    goto ReloadEndEmpty
  ReloadEndEmpty:
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    TNT1 A 0 A_TakeInventory("Glock18CEmpty", 1)
    G18E A 0 A_WeaponReady(WRF_NOFIRE)
	G18G XYZ 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	G18H ABCDEF 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	G18E A 0 A_WeaponReady(WRF_NOFIRE)
	G18E X 0 A_PlayWeaponSound("Glock17/reload4")	
	G18H GHIJKLMNOPQR 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    TNT1 A 0 A_ReFire
    goto InHand
	
  KnifeAttack:
    TNT1 A 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    TNT1 A 0 A_TakeInventory("Aiming", 1)
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    TNT1 A 0 A_JumpIfInventory("ThrowingGrenade", 1, "FragGrenade")
    TNT1 A 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 900, 900, 1)		//Recoil script
	TNT1 A 0 A_JumpIfInventory("Katana", 1, "KatanaAttack")
	TNT1 A 0 A_JumpIfInventory("Katana_Samurai", 1, "KatanaAttack")
    KNI9 A 1 A_PlaySoundEx("melee/hit", "SoundSlot5")
    KNI9 BCL 1
    KNI9 D 1 A_FireBullets(10.0, 0.0, 6, 7, "MachineGunBulletPuff", 0, 80)
    KNI9 EFGHIJ 1
    TNT1 A 5
    TNT1 A 0 A_TakeInventory("KnifeAttack", 1)
    goto Ready2+2
  KatanaAttack:
	KTNB FG 1
	KTNB H 1 A_Saw("weapons/knifeswing3", "weapons/knifehits", 40, "katanaPuff", SF_NOUSEAMMO, 80, 32)
    KTNB IJ 1 
    TNT1 A 5
	TNT1 A 0 A_TakeInventory("KnifeAttack", 1)
    goto Ready2+2
  FragGrenade:
    TNT1 A 0 A_JumpIfInventory("ThrowingStunGrenade", 1, "StunGrenade")
    TNT1 A 0 A_JumpIfInventory("ThrowingKnife", 1, "ThrowingKnife")
    FRGA ABCDEFGHI 1
    FRGA J 0 A_PlaySoundEx("grenade/pinpull", "SoundSlot5")
	FRGA JKLMOPQ 2
    FRGA ST 2
    FRGA H 0 A_PlaySoundEx("grenade/throw", "SoundSlot5")
    FRGA I 0 A_TakeInventory("FragGrenadeAmmo", 1)
    FRGA I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGA I 0 A_TakeInventory("KnifeAttack", 1)
    FRGA I 0 A_FireCustomMissile("FragGrenade", 0, 0, 0, 16)
	FRGA U 2
	FRGA VWX 2
    goto Ready2+1		//Reselect weapon
  StunGrenade:
    FRGA ABCDEFGHI 1
    FRGA F 0 A_PlaySoundEx("flash/pinpull", "SoundSlot5")
    FRGA JKLMOPQ 1
    FRGA ST 1
    FRGB H 0 A_PlaySoundEx("flash/throw", "SoundSlot5")
    FRGB I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGB I 0 A_TakeInventory("KnifeAttack", 1)
    FRGB I 0 A_TakeInventory("ThrowingStunGrenade", 1)
    FRGB C 0 A_FireCustomMissile("StunGrenadeThrown", 0, 0, 0, 16)
    FRGA U 2
	FRGA VWX 2
    goto Ready2+1		//Reselect weapon
  SemtexGrenade:
    FRGA ABCDE 3
    FRGA F 3 A_PlaySoundEx("grenade/pinpull", "SoundSlot5")
    TNT1 A 15 
    FRGA GH 3
    FRGA H 0 A_PlaySoundEx("grenade/throw", "SoundSlot5")
    FRGA I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGA I 0 A_TakeInventory("KnifeAttack", 1)
    FRGB I 0 A_TakeInventory("ThrowingSemtex", 1)
    FRGA I 3 A_FireCustomMissile("SemtexThrown", 0, 0, 0, 16)
    goto Ready+1		//Reselect weapon
  ThrowingKnife:
    FRGC AB 3
    FRGC C 3 A_PlaySoundEx("melee/swing", "SoundSlot5") 
    FRGC D 3 A_FireCustomMissile("ThrowingKnifeThrown", 0, 0, 0, 8)
    FRGC EFG 3
    TNT1 A 15 
    FRGC I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGC I 0 A_TakeInventory("KnifeAttack", 1)
    FRGC I 0 A_TakeInventory("ThrowingKnife", 1)
    goto Ready+1		//Reselect weapon
  Claymore:
    FRGD A 2 A_PlaySoundEx("claymore/click", "SoundSlot5") 
    FRGD BCDEFGHIJKLM 2
    TNT1 A 3 A_GiveInventory("ClaymoreUse", 1)
    TNT1 A 15 
    FRGC I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGC I 0 A_TakeInventory("KnifeAttack", 1)
    FRGC I 0 A_TakeInventory("ThrowingClaymore", 1)
    goto Ready+1		//Reselect weapon
  Betty:
    FRGE G 3 A_PlaySoundEx("grenade/throw", "SoundSlot5") 
    FRGE B 3 A_GiveInventory("BettyUse", 1)
    FRGE CDEF 3
    TNT1 A 15 
    FRGC I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGC I 0 A_TakeInventory("KnifeAttack", 1)
    FRGC I 0 A_TakeInventory("ThrowingBetty", 1)
    goto Ready+1		//Reselect weapon
  Flash:
    TNT1 A 0 
    MP5C X 3 BRIGHT //A_Light2
    stop
  GiveSOHSelect:
    goto Ready+3
  GiveSOHDeselect:
    goto Deselect+6
  GiveSOHReload:
    goto ReloadStart+1
  GiveQDKnife:
    goto KnifeAttack+5
  }
}