ACTOR MX4_Pickup : CustomInventory
{
  inventory.pickupmessage "[2] Beretta Mx4 Storm 9x19 submachine gun"
  inventory.pickupsound "nothing"
  +INVENTORY.AUTOACTIVATE
  +DONTGIB
  inventory.respawntics 35
  scale 0.16
  States
  {
  Spawn:
    B002 H -1
    Stop
  Pickup:
    GNEX A 0
	GUNP A 0 A_JumpIfInventory("MX4", 1, "failPickup")  //Do you have this?
	GUNP A 0 A_JumpIfInventory("Mulekick", 1, 2)         //Are you using unlimited mode?
	GUNP A 0 A_JumpIfInventory("gun3SV", 0, "notPickup") //Do you have space in your inventory?
	GUNP A 0 A_GiveInventory("gun3SV", 1) 
	TNT1 A 0 A_PlaySound("misc/w_pkup")      //Pick up!
	GUNP A 0 A_GiveInventory("MX4", 1)      //weapon
	GUNP A 0 A_GiveInventory("MX4Clip", 30) //clip
    TNT1 A 0 A_TakeInventory("MX4Empty", 1) //no reload
	GNEX A 0 ACS_NamedExecuteWithResult("CoDNewWeapon", 13, 0, 0)
	GUNP A 0 //A_SelectWeapon("MX4")
    Stop
  FailPickup:
    B002 H -1
    fail
  notPickup:
    TNT1 A 0 ACS_NamedExecuteWithResult("CoDNotPickup", 13, 0, 0)
    B002 H -1
    fail
  }
}

