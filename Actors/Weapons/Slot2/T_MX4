actor MX4 : RGUWeapon
{
  Obituary "%o was shot down by %k's Mx4."
  inventory.pickupmessage "[2] Beretta Mx4 Storm 9x19 submachine gun"
  inventory.pickupsound "misc/w_pkup" 
  weapon.selectionorder 21
  tag "Mx4 Storm"
  weapon.ammotype "MX4Clip"
  weapon.ammouse 1
  weapon.ammotype2 "Ammo9mm"
  States
  {
  Spawn:
  B002 H 0
	TNT1 A 0 A_PlaySound("WeaponDropped") 
    TNT1 A 2
	TNT1 A 0 A_SpawnItemEx ("RemoveSlot2", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
	TNT1 A 0 A_SpawnItemEx ("RemoveMX4", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
	TNT1 A 0 A_SpawnItemEx ("DropWeapon_MX4", 20, 0, 20, 10, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
    stop
  Select:
    TNT1 A 1 A_Raise
    TNT1 AA 0 A_Raise
    loop
  Ready:
   TNT1 A 0 A_TakeInventory("Weight", 0)
	TNT1 A 0 A_GiveInventory("Weight", 2)	//Determines player speed - 3 means slower speed
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 56, 0, 0)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDFireSelectIcon", 99, 0, 0)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDScopeSelectIcon", 99, 0, 0)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDFireSelect", 12, 0, 0)
	TNT1 A 0 A_TakeInventory("BOSelectScope", 1)
	TNT1 A 0 A_TakeInventory("BOSelectFire", 1)
	TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
	TNT1 A 0 A_TakeInventory("BOWeaponlooking", 1)
	TNT1 A 0 A_TakeInventory("Reloading", 1)
	TNT1 A 0 A_TakeInventory("Aiming", 1)
	GUNP A 0 //ACS_NamedExecuteWithResult("CoDWeaponIcon", 13, 0, 0)
	TNT1 A 0 A_ZoomFactor(1.0, ZOOM_INSTANT)
    TNT1 A 0 A_SetCrosshair(0)
    TNT1 A 0 A_JumpIfInventory("Perk1_SOH_Pro", 1, "GiveSOHSelect")
    M26A A 2 A_PlayWeaponSound("weapon/select")
	//M26A BCDEGHIJK 2
	M26A BCDEK 2
    //goto InHand 				-- intentional drop to next state
  InHand: 					//Ready state
    M26A F 0 A_JumpIfNoAmmo("Reload")
    M26A F 0 A_JumpIfInventory("Aiming", 1, "Aiming")
    M26A F 0 A_JumpIfInventory("Reloading", 1, "Reload")
    M26A F 0 A_JumpIfInventory("ThrowingGrenade", 1, "KnifeAttack")
    M26A F 0 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	TNT1 A 0 A_JumpIfInventory("BOSelectFire", 1, "FireSet")
	TNT1 A 0 A_JumpIfInventory("BOWeaponlook", 1, "Weaponlook")
	TNT1 A 0 A_JumpIfInventory("BONVstart", 1, "NightVisionON") //
	GUNP A 0 //ACS_NamedExecuteWithResult("CoDWeaponIcon", 13, 0, 0)
    M26A F 1 A_WeaponReady(WRF_ALLOWRELOAD)
	Goto CheckFiremode 
  Friendcallup:
    TNT1 A 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    TNT1 A 0 A_GiveInventory("Followcall", 1)
    TNT1 A 0 A_TakeInventory("Aiming", 1)
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    TNT1 A 0 A_PlaySound("NEEDCOME")
    FRGE IHGFGHI 2
    TNT1 A 10
    TNT1 A 0 A_TakeInventory("KnifeAttack", 1)
    TNT1 A 0 A_TakeInventory("Followcall", 1)
    TNT1 A 0 A_TakeInventory("BOFriendcall", 1)
    Goto Ready2+2
  Ready2:
    TNT1 A 0 //A_GiveInventory("Weight", 3)	
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    TNT1 A 0 A_JumpIfInventory("Perk1_SOH_Pro", 1, "GiveSOHSelect")
    TNT1 A 0 A_PlayWeaponSound("weapon/select")
    M26A ABCDEK 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    goto InHand

  CheckFiremode:
   ACRA F 0
   ACRA F 0 A_JumpIfInventory("MX4_FireSet", 1, 2)
   ACRA F 0 //ACS_NamedExecuteWithResult("CoDFireSelectIcon", 1, 0, 0)//Full
   Goto CheckScopemode
   ACRA F 0 //ACS_NamedExecuteWithResult("CoDFireSelectIcon", 9, 0, 0)//Rapid
   Goto CheckScopemode

  CheckScopemode:
   ACRA F 0
   ACRA F 0 //A_JumpIfInventory("AN94_Scope", 1, 2)
   ACRA F 0 //ACS_ExecuteWithResult(995, 1, 0, 0)//x3
   Goto Inhand
   ACRA F 0 //ACS_ExecuteWithResult(995, 2, 0, 0)//Dot
   Goto Inhand

  FireSet:
    TNT1 A 0 
	TNT1 A 0 A_JumpIfInventory("MX4_FireBurst", 1, "FireSetSemi") 
	TNT1 A 0 A_JumpIfInventory("MX4_FireSet", 1, "FireSetoff")
    TNT1 A 0 A_PlaySoundEx("FAL/set", "SoundSlot5")
	//TNT1 A 0 ACS_ExecuteWithResult(894, 4, 0, 0)
	ACRA F 0 ACS_NamedExecuteWithResult("CoDFireSelect", 3, 0, 0)//3Burst
	TNT1 A 0 A_TakeInventory("BOSelectFire", 1)
    TNT1 A 0 A_GiveInventory("MX4_FireBurst", 1) //3B
    goto InHand
  FireSetSemi:
    TNT1 A 0 
    TNT1 A 0 A_PlaySoundEx("FAL/set", "SoundSlot5")
	//TNT1 A 0 ACS_ExecuteWithResult(894, 4, 0, 0)
	ACRA F 0 ACS_NamedExecuteWithResult("CoDFireSelect", 4, 0, 0)//Semi
	TNT1 A 0 A_TakeInventory("BOSelectFire", 1)
	TNT1 A 0 A_TakeInventory("MX4_FireBurst", 1)
    TNT1 A 0 A_GiveInventory("MX4_FireSet", 1) //Semi
    goto InHand
  FireSetoff:
    TNT1 A 0 
    TNT1 A 0 A_PlaySoundEx("FAL/set", "SoundSlot5")
	//TNT1 A 0 ACS_ExecuteWithResult(894, 1, 0, 0)
	ACRA F 0 ACS_NamedExecuteWithResult("CoDFireSelect", 1, 0, 0)//Full
	TNT1 A 0 A_TakeInventory("BOSelectFire", 1)
	TNT1 A 0 A_TakeInventory("MX4_FireBurst", 1)
    TNT1 A 0 A_TakeInventory("MX4_FireSet", 1) //Full
    goto InHand
	
	  NightVisionON:
    TNT1 A 0 
	TNT1 A 0 A_TakeInventory("Aiming", 1)
	TNT1 A 0 A_ZoomFactor(1.0, ZOOM_INSTANT)
    TNT1 A 0 A_SetCrosshair(0)
	TNT1 A 0 A_JumpIfInventory("NightVisionActive", 1, "NightVisionOFF")   
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
    TNT1 A 0 A_PlaySoundEx("g36c/reload1", "SoundSlot5")
	BONV ABCDEFGHIJKLM 2
	BONV N 6
	TNT1 A 0 A_PlaySoundEx("BONVactive", "SoundSlot6")
	TNT1 A 0 A_GiveInventory("Infrared_COD", 1)
	TNT1 A 0 A_GiveInventory("NightVisionActive", 1)
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
    goto ready2
  NightVisionOFF:
    TNT1 A 0 
	TNT1 A 0 A_TakeInventory("Infrared_COD", 0)
	TNT1 A 0 A_TakeInventory("PowerLightAmp", 0)
	TNT1 A 0 A_TakeInventory("NightVisionActive", 0)
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
    TNT1 A 0 A_PlaySoundEx("weapon/select", "SoundSlot5")
	BONV NMLKJIHGFEDCBA 2
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
    goto ready2
	
  Weaponlook:
    TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
	TNT1 A 0 A_TakeInventory("Aiming", 1)
  Weaponlooking: 	
    TNT1 A 0 A_GiveInventory("BOWeaponlooking", 1)
    ACRA F 0 A_JumpIfInventory("Aiming", 1, "WeaponlookEND")
    ACRA F 0 A_JumpIfInventory("Reloading", 1, "WeaponlookEND")
    ACRA F 0 A_JumpIfInventory("ThrowingGrenade", 1, "WeaponlookEND")
    ACRA F 0 A_JumpIfInventory("KnifeAttack", 1, "WeaponlookEND")
	ACRA F 0 A_JumpIfInventory("BOWeaponlook", 1, "WeaponlookEND")
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 13, 0, 0)
    M26A F 1 A_WeaponReady(WRF_ALLOWRELOAD)
    loop 
  WeaponlookEND:
    TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 56, 0, 0)
    TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
    TNT1 A 0 A_TakeInventory("BOWeaponlooking", 1)
    goto InHand
   
  Aiming:
    M26C D 0 A_JumpIfInventory("Reloading", 1, "Reload")    
    M26C D 0 A_JumpIfInventory("ThrowingGrenade", 1, "KnifeAttack")
    M26C D 0 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	ACRA F 0 A_JumpIfInventory("BOSelectFire", 1, "FireSet")
    M26C D 1 A_GunFlash
	M26C D 1 A_WeaponReady(WRF_NOBOB|WRF_ALLOWRELOAD)
	TNT1 F 0 
    loop
  Deselect:
    TNT1 A 0 A_TakeInventory("Weight", 0)	//Determines player speed - 1 means normal speed
    TNT1 A 0 A_TakeInventory("Aiming", 1)
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    TNT1 A 0 A_TakeInventory("Reloading", 1)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 56, 0, 0)
	TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
    TNT1 A 0 A_TakeInventory("BOWeaponlooking", 1)
    TNT1 A 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    TNT1 A 0 A_JumpIfInventory("Perk1_SOH_Pro", 1, "GiveSOHDeselect")
    M26A JIHGEDCBA 1
  DeselectFull: 				//Deselect
    TNT1 AA 0 A_Lower
    TNT1 A 1 A_Lower
    loop  
  Fire:
    ACRA F 0 A_JumpIfInventory("BOWeaponlooking", 1, "WeaponlookEND")
    M26A F 0 A_JumpIfInventory("Aiming", 1, "FireAim")
    M26A F 0 A_JumpIfNoAmmo("ReloadStart")
	TNT1 A 0 A_JumpIfInventory("MX4_FireSet", 1, "FireSemi") 
	TNT1 A 0 A_JumpIfInventory("MX4_FireBurst", 1, "FireBurst")
    M26B A 0 A_FireCustomMissile("MX4Puff", 0, 0, 8, -3)   //Fire effect and sound
	TNT1 A 0 A_PlaySoundEx("MX4/Fire1", "SoundSlot5")
    TNT1 A 0 A_PlaySoundEx("MX4/Fire2", "SoundSlot6")
	M26B A 1 A_FireBullets(0.4, 0.4, -1, 13, "HitPuff", 1, 7500)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", 5, 0, 8, -9)
    P90B B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 170, 170, 8)		//Recoil script - 600 recoil, revert aim
    M26B BC 1 
    M26B C 0 A_JumpIfNoAmmo("FireEmpty")
    M26B A 0 A_JumpIfInventory("Ammo9mm", 1, 2)
    M26B D 1 A_ReFire
    goto InHand
    M26B A 0 A_JumpIfNoAmmo(2)
    M26B A 0 A_ReFire
    goto InHand
    M26B A 0 A_GiveInventory("MX4Empty", 1)		//Go to reload
    goto Reload
  FireSemi:
    M26A F 0 A_JumpIfInventory("Aiming", 1, "FireAim")
    M26A F 0 A_JumpIfNoAmmo("ReloadStart")
    M26B A 0 A_FireCustomMissile("MX4Puff", 0, 0, 8, -3)   //Fire effect and sound
	TNT1 A 0 A_PlaySoundEx("MX4/Fire1", "SoundSlot5")
    TNT1 A 0 A_PlaySoundEx("MX4/Fire2", "SoundSlot6")
	M26B B 1 A_FireBullets(0.1, 0.1, -1, 13, "HitPuff", 1, 7500)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", 5, 0, 8, -9)
    M26B B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 170, 170, 8)		//Recoil script - 600 recoil, revert aim
    M26B C 1 
    M26B D 0 A_JumpIfNoAmmo("FireEmpty")
    M26B A 0 A_JumpIfInventory("Ammo9mm", 1, 2)
    M26B D 1 A_ReFire
    goto InHand
    M26B A 0 A_JumpIfNoAmmo(2)
    M26B A 0 A_ReFire
    goto InHand
    M26B A 0 A_GiveInventory("MX4Empty", 1)		//Go to reload
    goto Reload
  FireBurst:
    M26A F 0 A_JumpIfInventory("Aiming", 1, "FireAim")
    M26A F 0 A_JumpIfNoAmmo("ReloadStart")
    M26B A 0 A_FireCustomMissile("MX4Puff", 0, 0, 8, -3)   //Fire effect and sound
	TNT1 A 0 A_PlaySoundEx("MX4/Fire1", "SoundSlot5")
	TNT1 A 0 A_PlaySoundEx("MX4/Fire2", "SoundSlot6")
	M26B A 1 A_FireBullets(0.1, 0.1, -1, 13, "HitPuff", 1, 7500)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", 5, 0, 8, -9)
    M26B B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 170, 170, 8)		//Recoil script - 600 recoil, revert aim
    M26B B 1 
	//M26B C 1 
    M26B D 0 A_JumpIfNoAmmo("FireEmpty")
	M26B A 0 A_FireCustomMissile("MX4Puff", 0, 0, 8, -3)   //Fire effect and sound
	TNT1 A 0 A_PlaySoundEx("MX4/Fire1", "SoundSlot5")
	TNT1 A 0 A_PlaySoundEx("MX4/Fire2", "SoundSlot6")
	M26B A 1 A_FireBullets(0.2, 0.2, -1, 13, "HitPuff", 1, 7500)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", 5, 0, 8, -9)
    M26B B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 170, 170, 8)		//Recoil script - 600 recoil, revert aim
    M26B B 1 
	//M26B C 1 
    M26B D 0 A_JumpIfNoAmmo("FireEmpty")
	M26B A 0 A_FireCustomMissile("MX4Puff", 0, 0, 8, -3)   //Fire effect and sound
	TNT1 A 0 A_PlaySoundEx("MX4/Fire1", "SoundSlot5")
	TNT1 A 0 A_PlaySoundEx("MX4/Fire2", "SoundSlot6")
	M26B A 1 A_FireBullets(0.1, 0.1, -1, 13, "HitPuff", 1, 7500)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", 5, 0, 8, -9)
    M26B B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 170, 170, 8)		//Recoil script - 600 recoil, revert aim
    M26B B 1 
	M26B C 1  A_JumpIfNoAmmo("FireEmpty")
    M26B A 0 A_JumpIfInventory("Ammo9mm", 1, 2)
    M26B D 1 A_ReFire
    goto InHand
    M26B A 0 A_JumpIfNoAmmo(2)
    M26B A 0 A_ReFire
    goto InHand
    M26B A 0 A_GiveInventory("MX4Empty", 1)		//Go to reload
    goto Reload
	
  FireEmpty:
    M26B D 1 
    M26A F 1 A_PlayWeaponSound("weapon/dryfire")
    M26B A 0 A_JumpIfNoAmmo(2)
    M26B A 0 A_ReFire
    goto InHand
    M26B A 0 A_GiveInventory("MX4Empty", 1)		//Go to reload
    goto Reload
  FireAim:
    M26C D 0 A_JumpIfNoAmmo("ReloadStart")
	TNT1 A 0 A_JumpIfInventory("MX4_FireSet", 1, "FireAimSemi")  
	TNT1 A 0 A_JumpIfInventory("MX4_FireBurst", 1, "FireAimBurst") 
    M4AD A 0 A_FireCustomMissile("MX4Puff", 0, 0, 0, -7)   //Fire effect and sound
	TNT1 A 0 A_PlaySoundEx("MX4/Fire1", "SoundSlot5")
    TNT1 A 0 A_PlaySoundEx("MX4/Fire2", "SoundSlot6")
    M26D A 1 A_FireBullets(0.0, 0.0, -1, 13, "HitPuff", 1, 7500)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", -2, 0, 0, -9)
    PM9D B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 170, 170, 8)		//Recoil script - 600 recoil, revert aim
    M26D BC 1 A_GunFlash
    M26D C 0 A_JumpIfNoAmmo("FireEmptyAim")
    M4AD A 0 A_JumpIfInventory("Ammo9mm", 1, 2)
    M26D D 1 A_ReFire
    goto InHand
    M4AD A 0 A_JumpIfNoAmmo(2)
    M4AD A 0 A_ReFire
    goto InHand
    M4AD A 0 A_GiveInventory("MX4Empty", 1)		//Go to reload
    goto Reload
  FireAimSemi:
    M26C D 0 A_JumpIfNoAmmo("ReloadStart")
    M4AD A 0 A_FireCustomMissile("MX4Puff", 0, 0, 0, -7)   //Fire effect and sound
	TNT1 A 0 A_PlaySoundEx("MX4/Fire1", "SoundSlot5")
    TNT1 A 0 A_PlaySoundEx("MX4/Fire2", "SoundSlot6")
    M26D B 1 A_FireBullets(0.0, 0.0, -1, 13, "HitPuff", 1, 7500)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", -2, 0, 0, -9)
    M4AD B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 170, 170, 8)		//Recoil script - 600 recoil, revert aim
    M26D C 1 A_GunFlash
    M4AD D 0 A_JumpIfNoAmmo("FireEmptyAim")
    M4AD A 0 A_JumpIfInventory("Ammo9mm", 1, 2)
    M26D D 1 A_ReFire
    goto InHand
    M4AD A 0 A_JumpIfNoAmmo(2)
    M4AD A 0 A_ReFire
    goto InHand
    M4AD A 0 A_GiveInventory("MX4Empty", 1)		//Go to reload
    goto Reload
  FireAimBurst:
    M26C D 0 A_JumpIfNoAmmo("ReloadStart")
    M26D A 0 A_FireCustomMissile("MX4Puff", 0, 0, 0, -9)   //Fire effect and sound
	TNT1 A 0 A_PlaySoundEx("MX4/Fire1", "SoundSlot5")
	TNT1 A 0 A_PlaySoundEx("MX4/Fire2", "SoundSlot6")
    M26D A 1 A_FireBullets(0.0, 0.1, -1, 13, "HitPuff", 1, 7500)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", -2, 0, 0, -9)
    M26D B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 170, 170, 8)		//Recoil script - 600 recoil, revert aim
    M26D B 1 A_GunFlash
    M26D D 0 A_JumpIfNoAmmo("FireEmptyAim")
	M26D A 0 A_FireCustomMissile("MX4Puff", 0, 0, 0, -9)   //Fire effect and sound
	TNT1 A 0 A_PlaySoundEx("MX4/Fire1", "SoundSlot5")
	TNT1 A 0 A_PlaySoundEx("MX4/Fire2", "SoundSlot6")
	M26D A 1 A_FireBullets(0.1, 0.2, -1, 13, "HitPuff", 1, 7500)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", -2, 0, 0, -9)
    M26D B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 170, 170, 8)		//Recoil script - 600 recoil, revert aim
    M26D B 1 A_GunFlash
    M26D D 0 A_JumpIfNoAmmo("FireEmptyAim")
	M26D A 0 A_FireCustomMissile("MX4Puff", 0, 0, 0, -9)   //Fire effect and sound
	TNT1 A 0 A_PlaySoundEx("MX4/Fire1", "SoundSlot5")
	TNT1 A 0 A_PlaySoundEx("MX4/Fire2", "SoundSlot6")
	M26D A 1 A_FireBullets(0.0, 0.1, -1, 13, "HitPuff", 1, 7500)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", -2, 0, 0, -9)
    M26D B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 170, 170, 8)		//Recoil script - 600 recoil, revert aim
    M26D B 1 A_GunFlash
	M26D C 1 A_GunFlash
    M26D D 0 A_JumpIfNoAmmo("FireEmptyAim")
    M26D A 0 A_JumpIfInventory("Ammo9mm", 1, 2)
    M26D D 1 A_ReFire
    goto InHand
    M26D A 0 A_JumpIfNoAmmo(2)
    M26D A 0 A_ReFire
    goto InHand
    M26D A 0 A_GiveInventory("MX4Empty", 1)		//Go to reload
    goto Reload
	
  FireEmptyAim:
    M26C D 0 A_PlayWeaponSound("weapon/dryfire")
    M4AD A 0 A_JumpIfNoAmmo(2)
    M4AD A 0 A_ReFire
    goto InHand
    M4AD A 0 A_GiveInventory("MX4Empty", 1)		//Go to reload
    goto Reload
	
  Hold:
    TNT1 A 0 A_JumpIfInventory("MX4_FireSet", 1, "HoldSemi") 
	TNT1 A 0 A_JumpIfInventory("MX4_FireBurst", 1, "HoldSemi") 
	M26A F 0 A_JumpIfInventory("Aiming", 1, "HoldAim")
    M26A F 0 A_JumpIfInventory("ThrowingGrenade", 1, "KnifeAttack")
    M26A F 0 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	TNT1 F 0 
    goto Fire
  HoldSemi:
    M27A F 0 A_JumpIfInventory("Aiming", 1, "HoldAimSemi")
    M26A F 1 
    M27A F 0 A_JumpIfInventory("ThrowingGrenade", 1, "KnifeAttack")
    M27A F 0 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	M26A F 1 A_ReFire
    goto Inhand
  HoldAim:
    M26C D 0
	TNT1 F 0 
    goto FireAim
  HoldAimSemi:
	M26C D 1 A_GunFlash
    M27C D 0
	M26C D 1 A_ReFire
    goto Aiming
	
	
  AltFire:	//Aim
    ACRA F 0 A_JumpIfInventory("BOWeaponlooking", 1, "WeaponlookEND")
    M26C A 0 A_JumpIfInventory("Aiming", 1, "AltFire2")
    M26C A 0 A_ZoomFactor(1.4)	
    TNT1 A 0 A_SetCrosshair(41)
    M26C ABCEF 1
	//M26C G 1 A_GunFlash
    M26C D 0 A_GiveInventory("Aiming", 1)
    M26C D 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    M26A F 0 A_ReFire
    goto Aiming
  AltFire2:
    M26C D 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    //M26C G 1 //A_GunFlash
	M26C FECBA 1
    M26C A 0 A_TakeInventory("Aiming", 1)
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
	TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
    M26C A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    M26A F 0 A_ReFire
    goto InHand
	
  AltFire_QD:	//Aim with QuickDraw
    M26C A 0 A_JumpIfInventory("Aiming", 1, "AltFire2_QD")
    M26C A 0 A_ZoomFactor(1.4)
    TNT1 A 0 A_SetCrosshair(41)
    M26C ABCD 1
    M26C D 0 A_GiveInventory("Aiming", 1)
    M26C D 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    M26A F 0 A_ReFire
    goto Aiming
  AltFire2_QD:
    M26C D 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    M26C DCBA 1
    M26C A 0 A_TakeInventory("Aiming", 1)
    M26C A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    M26A F 0 A_ReFire
    goto InHand
  AltHold:
    M26A F 1 A_JumpIfInventory("Aiming", 1, "AltHoldAim")
	TNT1 F 0 
    M26A F 1 A_ReFire
    goto InHand
  AltHoldAim:
    M26C D 1 A_GunFlash
	TNT1 F 0 
    M26C D 1 A_ReFire
    goto Aiming
	
  ReloadStartAim:
    M26C D 1 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
	M26C FECBA 1
    M26C A 0 A_TakeInventory("Aiming", 1)
    M26C A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    goto ReloadStart+1
  Reload:
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    TNT1 A 0 A_JumpIfInventory("MX4Clip", 0, "InHand")
    TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 56, 0, 0)
    TNT1 A 0 A_JumpIfInventory("Ammo9mm", 1, "ReloadStart")
	TNT1 A 0 A_JumpIfInventory("Aiming", 1, "AltFire2")
    goto InHand+3
	
 ReloadStart:
    TNT1 A 0 A_JumpIfInventory("Perk1_SOH", 1, "GiveSOHReload")
    M26E A 0 A_JumpIfInventory("Aiming", 1, "ReloadStartAim")
	M26E A 0 A_JumpIfInventory("MX4Empty", 1, "ReloadEmpty")
	M26E E 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)
	//G36A F 0 A_PlaySoundEx("g36c/reload1", "SoundSlot6")
    M26E ABCDEFG 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	M26A C 0 A_PlaySoundEx("MX4/reload1", "SoundSlot6")
	M26E HIJKLMNOPRSTUVW 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	M26E I 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)		
	M26A C 0 A_PlaySoundEx("MX4/reload2", "SoundSlot6")
	M26E XYZ 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    M26F ABC 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")    
    goto ReloadAmmo
  ReloadAmmo:
    TNT1 A 0 A_GiveInventory("MX4Clip", 1)
    TNT1 A 0 A_TakeInventory("Ammo9mm", 1)
    TNT1 A 0 A_JumpIfInventory("MX4Clip", 0, "ReloadEnd")
    TNT1 A 0 A_JumpIfInventory("Ammo9mm", 1, "ReloadAmmo")
    goto ReloadEnd
  ReloadEnd:
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    M26F G 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)
    M26F DEFGHIJKL 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    TNT1 A 0 A_ReFire
    goto InHand
	
  ReloadEmpty:
    TNT1 A 0
    //G36A F 0 A_PlaySoundEx("g36c/reload1", "SoundSlot6")
    M26G ABCDEF 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    M26A C 0 A_PlaySoundEx("MX4/reload1", "SoundSlot6")
	M26G GHIJKL 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	M26G MNOPQRST 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	M26E I 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)		
	M26A C 0 A_PlaySoundEx("MX4/reload2", "SoundSlot6")
	M26G UVWXYZ 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    M26H AB 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")    
    goto ReloadAmmoEmpty
  ReloadAmmoEmpty:
    TNT1 A 0 A_GiveInventory("MX4Clip", 1)
    TNT1 A 0 A_TakeInventory("Ammo9mm", 1)
    TNT1 A 0 A_JumpIfInventory("MX4Clip", 30, "ReloadEndEmpty")
    TNT1 A 0 A_JumpIfInventory("Ammo9mm", 1, "ReloadAmmoEmpty")
    goto ReloadEndEmpty
  ReloadEndEmpty:
	TNT1 A 0 A_TakeInventory("MX4Empty", 1)
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    M26F G 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)
	M26A C 0 A_PlaySoundEx("MX4/reload3", "SoundSlot6")
	M26H CDEFGH 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack") 
    M26H IJKLMN 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    TNT1 A 0 A_ReFire
    goto InHand
	
  KnifeAttack:
    TNT1 A 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    TNT1 A 0 A_TakeInventory("Aiming", 1)
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    TNT1 A 0 A_JumpIfInventory("ThrowingGrenade", 1, "FragGrenade")
    TNT1 A 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 900, 900, 1)		//Recoil script
	TNT1 A 0 A_JumpIfInventory("Katana", 1, "KatanaAttack")
	TNT1 A 0 A_JumpIfInventory("Katana_Samurai", 1, "KatanaAttack")
    KNI9 A 1 A_PlaySoundEx("melee/hit", "SoundSlot5")
    KNI9 BCL 1
    KNI9 D 1 A_FireBullets(10.0, 0.0, 6, 7, "MachineGunBulletPuff", 0, 80)
    KNI9 EFGHIJ 1
    TNT1 A 5
    TNT1 A 0 A_TakeInventory("KnifeAttack", 1)
    goto Ready2+2
  KatanaAttack:
	KTNB FG 1
	KTNB H 1 A_Saw("weapons/knifeswing3", "weapons/knifehits", 40, "katanaPuff", SF_NOUSEAMMO, 80, 32)
    KTNB IJ 1 
    TNT1 A 5
	TNT1 A 0 A_TakeInventory("KnifeAttack", 1)
    goto Ready2+2
  FragGrenade:
    TNT1 A 0 A_JumpIfInventory("ThrowingStunGrenade", 1, "StunGrenade")
    TNT1 A 0 A_JumpIfInventory("ThrowingKnife", 1, "ThrowingKnife")
    FRGA ABCDEFGHI 1
    FRGA J 0 A_PlaySoundEx("grenade/pinpull", "SoundSlot5")
	FRGA JKLMOPQ 2
    FRGA ST 2
    FRGA H 0 A_PlaySoundEx("grenade/throw", "SoundSlot5")
    FRGA I 0 A_TakeInventory("FragGrenadeAmmo", 1)
    FRGA I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGA I 0 A_TakeInventory("KnifeAttack", 1)
    FRGA I 0 A_FireCustomMissile("FragGrenade", 0, 0, 0, 16)
	FRGA U 2
	FRGA VWX 2
    goto Ready2+1		//Reselect weapon
  StunGrenade:
    FRGA ABCDEFGHI 1
    FRGA F 0 A_PlaySoundEx("flash/pinpull", "SoundSlot5")
    FRGA JKLMOPQ 1
    FRGA ST 1
    FRGB H 0 A_PlaySoundEx("flash/throw", "SoundSlot5")
    FRGB I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGB I 0 A_TakeInventory("KnifeAttack", 1)
    FRGB I 0 A_TakeInventory("ThrowingStunGrenade", 1)
    FRGB C 0 A_FireCustomMissile("StunGrenadeThrown", 0, 0, 0, 16)
    FRGA U 2
	FRGA VWX 2
    goto Ready2+1		//Reselect weapon
  SemtexGrenade:
    FRGA ABCDE 3
    FRGA F 3 A_PlaySoundEx("grenade/pinpull", "SoundSlot5")
    TNT1 A 15 
    FRGA GH 3
    FRGA H 0 A_PlaySoundEx("grenade/throw", "SoundSlot5")
    FRGA I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGA I 0 A_TakeInventory("KnifeAttack", 1)
    FRGB I 0 A_TakeInventory("ThrowingSemtex", 1)
    FRGA I 3 A_FireCustomMissile("SemtexThrown", 0, 0, 0, 16)
    goto Ready+1		//Reselect weapon
  ThrowingKnife:
    FRGC AB 3
    FRGC C 3 A_PlaySoundEx("melee/swing", "SoundSlot5") 
    FRGC D 3 A_FireCustomMissile("ThrowingKnifeThrown", 0, 0, 0, 8)
    FRGC EFG 3
    TNT1 A 15 
    FRGC I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGC I 0 A_TakeInventory("KnifeAttack", 1)
    FRGC I 0 A_TakeInventory("ThrowingKnife", 1)
    goto Ready+1		//Reselect weapon
  Claymore:
    FRGD A 2 A_PlaySoundEx("claymore/click", "SoundSlot5") 
    FRGD BCDEFGHIJKLM 2
    TNT1 A 3 A_GiveInventory("ClaymoreUse", 1)
    TNT1 A 15 
    FRGC I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGC I 0 A_TakeInventory("KnifeAttack", 1)
    FRGC I 0 A_TakeInventory("ThrowingClaymore", 1)
    goto Ready+1		//Reselect weapon
  Betty:
    FRGE G 3 A_PlaySoundEx("grenade/throw", "SoundSlot5") 
    FRGE B 3 A_GiveInventory("BettyUse", 1)
    FRGE CDEF 3
    TNT1 A 15 
    FRGC I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGC I 0 A_TakeInventory("KnifeAttack", 1)
    FRGC I 0 A_TakeInventory("ThrowingBetty", 1)
    goto Ready+1		//Reselect weapon
  Flash:
    TNT1 A 0 
    MP5C X 3 BRIGHT //A_Light2
    stop
  GiveSOHSelect:
    goto Ready+3
  GiveSOHDeselect:
    goto Deselect+6
  GiveSOHReload:
    goto ReloadStart+1
  GiveQDKnife:
    goto KnifeAttack+5
  }
}