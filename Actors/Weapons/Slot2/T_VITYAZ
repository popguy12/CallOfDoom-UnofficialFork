actor Vityaz : RGUWeapon
{
  Obituary "%o was shot down by %k's Vityaz."
  inventory.pickupmessage "[2] Kalashnikov PP-19-01 Vityaz 9x19 submachine gun"
  inventory.pickupsound "misc/w_pkup" 
  weapon.selectionorder 25
  tag "PP-19-01 Vityaz"
  weapon.ammotype "VityazClip"
  weapon.ammouse 1
  weapon.ammotype2 "Ammo9mm"
  States
  {
  Spawn:
  B004 P 0
	TNT1 A 0 A_PlaySound("WeaponDropped") 
    TNT1 A 2
	TNT1 A 0 A_SpawnItemEx ("RemoveSlot2", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
	TNT1 A 0 A_SpawnItemEx ("RemoveVityaz", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
	TNT1 A 0 A_SpawnItemEx ("DropWeapon_Vityaz", 20, 0, 20, 10, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
    stop
  Select:
    TNT1 A 1 A_Raise
    TNT1 AA 0 A_Raise
    loop
  Ready:
   TNT1 A 0 A_TakeInventory("Weight", 0)
	TNT1 A 0 A_GiveInventory("Weight", 2)	//Determines player speed - 3 means slower speed
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 56, 0, 0)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDFireSelectIcon", 99, 0, 0)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDScopeSelectIcon", 99, 0, 0)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDFireSelect", 12, 0, 0)
	TNT1 A 0 A_TakeInventory("BOSelectScope", 1)
	TNT1 A 0 A_TakeInventory("BOSelectFire", 1)
	TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
	TNT1 A 0 A_TakeInventory("BOWeaponlooking", 1)
	TNT1 A 0 A_TakeInventory("Reloading", 1)
	TNT1 A 0 A_TakeInventory("Aiming", 1)
	GUNP A 0 //ACS_NamedExecuteWithResult("CoDWeaponIcon", 100, 0, 0)
	TNT1 A 0 A_ZoomFactor(1.0, ZOOM_INSTANT)
    TNT1 A 0 A_SetCrosshair(0)
    TNT1 A 0 A_JumpIfInventory("Perk1_SOH_Pro", 1, "GiveSOHSelect")
    VIYA A 2 A_PlayWeaponSound("weapon/select")
	VIYA BCDEGHI 2
    //goto InHand 				-- intentional drop to next state
  InHand: 					//Ready state
    VIYA F 0 A_JumpIfNoAmmo("Reload")
    VIYA F 0 A_JumpIfInventory("Aiming", 1, "Aiming")
    VIYA F 0 A_JumpIfInventory("Reloading", 1, "Reload")
    VIYA F 0 A_JumpIfInventory("ThrowingGrenade", 1, "KnifeAttack")
    VIYA F 0 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	TNT1 A 0 A_JumpIfInventory("BOSelectFire", 1, "FireSet")
	TNT1 A 0 A_JumpIfInventory("BOWeaponlook", 1, "Weaponlook")
	TNT1 A 0 A_JumpIfInventory("BONVstart", 1, "NightVisionON") //
	GUNP A 0 //ACS_NamedExecuteWithResult("CoDWeaponIcon", 100, 0, 0)
    VIYA F 1 A_WeaponReady(WRF_ALLOWRELOAD)
	Goto CheckFiremode 
  Friendcallup:
    TNT1 A 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    TNT1 A 0 A_GiveInventory("Followcall", 1)
    TNT1 A 0 A_TakeInventory("Aiming", 1)
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    TNT1 A 0 A_PlaySound("NEEDCOME")
    FRGE IHGFGHI 2
    TNT1 A 10
    TNT1 A 0 A_TakeInventory("KnifeAttack", 1)
    TNT1 A 0 A_TakeInventory("Followcall", 1)
    TNT1 A 0 A_TakeInventory("BOFriendcall", 1)
    Goto Ready2+2
  Ready2:
    TNT1 A 0 //A_GiveInventory("Weight", 3)	
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    TNT1 A 0 A_JumpIfInventory("Perk1_SOH_Pro", 1, "GiveSOHSelect")
    TNT1 A 0 A_PlayWeaponSound("weapon/select")
    VIYA ABCDEGHI 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    goto InHand

  CheckFiremode:
   ACRA F 0
   ACRA F 0 A_JumpIfInventory("Vityaz_FireSet", 1, 2)
   ACRA F 0 //ACS_NamedExecuteWithResult("CoDFireSelectIcon", 1, 0, 0)//Full
   Goto CheckScopemode
   ACRA F 0 //ACS_NamedExecuteWithResult("CoDFireSelectIcon", 9, 0, 0)//Rapid
   Goto CheckScopemode

  CheckScopemode:
   ACRA F 0
   ACRA F 0 //A_JumpIfInventory("AN94_Scope", 1, 2)
   ACRA F 0 //ACS_ExecuteWithResult(995, 1, 0, 0)//x3
   Goto Inhand
   ACRA F 0 //ACS_ExecuteWithResult(995, 2, 0, 0)//Dot
   Goto Inhand

  FireSet:
    TNT1 A 0 
	TNT1 A 0 A_JumpIfInventory("Vityaz_FireSet", 1, "FireSetoff")   
    TNT1 A 0 A_PlaySoundEx("FAL/set", "SoundSlot5")
	//TNT1 A 0 ACS_ExecuteWithResult(894, 9, 0, 0)
	ACRA F 0 ACS_NamedExecuteWithResult("CoDFireSelect", 4, 0, 0)//Semi
	TNT1 A 0 A_TakeInventory("BOSelectFire", 1)
    TNT1 A 0 A_GiveInventory("Vityaz_FireSet", 1)
    goto InHand
  FireSetoff:
    TNT1 A 0 
    TNT1 A 0 A_PlaySoundEx("FAL/set", "SoundSlot5")
	//TNT1 A 0 ACS_ExecuteWithResult(894, 1, 0, 0)
	ACRA F 0 ACS_NamedExecuteWithResult("CoDFireSelect", 1, 0, 0)//Full
	TNT1 A 0 A_TakeInventory("BOSelectFire", 1)
    TNT1 A 0 A_TakeInventory("Vityaz_FireSet", 1)
    goto InHand
	
	  NightVisionON:
    TNT1 A 0 
	TNT1 A 0 A_TakeInventory("Aiming", 1)
	TNT1 A 0 A_ZoomFactor(1.0, ZOOM_INSTANT)
    TNT1 A 0 A_SetCrosshair(0)
	TNT1 A 0 A_JumpIfInventory("NightVisionActive", 1, "NightVisionOFF")   
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
    TNT1 A 0 A_PlaySoundEx("g36c/reload1", "SoundSlot5")
	BONV ABCDEFGHIJKLM 2
	BONV N 6
	TNT1 A 0 A_PlaySoundEx("BONVactive", "SoundSlot6")
	TNT1 A 0 A_GiveInventory("Infrared_COD", 1)
	TNT1 A 0 A_GiveInventory("NightVisionActive", 1)
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
    goto ready2
  NightVisionOFF:
    TNT1 A 0 
	TNT1 A 0 A_TakeInventory("Infrared_COD", 0)
	TNT1 A 0 A_TakeInventory("PowerLightAmp", 0)
	TNT1 A 0 A_TakeInventory("NightVisionActive", 0)
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
    TNT1 A 0 A_PlaySoundEx("weapon/select", "SoundSlot5")
	BONV NMLKJIHGFEDCBA 2
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
    goto ready2
	
  Weaponlook:
    TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
	TNT1 A 0 A_TakeInventory("Aiming", 1)
  Weaponlooking: 	
    TNT1 A 0 A_GiveInventory("BOWeaponlooking", 1)
    ACRA F 0 A_JumpIfInventory("Aiming", 1, "WeaponlookEND")
    ACRA F 0 A_JumpIfInventory("Reloading", 1, "WeaponlookEND")
    ACRA F 0 A_JumpIfInventory("ThrowingGrenade", 1, "WeaponlookEND")
    ACRA F 0 A_JumpIfInventory("KnifeAttack", 1, "WeaponlookEND")
	ACRA F 0 A_JumpIfInventory("BOWeaponlook", 1, "WeaponlookEND")
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 100, 0, 0)
    VIYA F 1 A_WeaponReady(WRF_ALLOWRELOAD)
    loop 
  WeaponlookEND:
    TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 56, 0, 0)
    TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
    TNT1 A 0 A_TakeInventory("BOWeaponlooking", 1)
    goto InHand
   
  Aiming:
    VIYC D 0 A_JumpIfInventory("Reloading", 1, "Reload")    
    VIYC D 0 A_JumpIfInventory("ThrowingGrenade", 1, "KnifeAttack")
    VIYC D 0 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	ACRA F 0 A_JumpIfInventory("BOSelectFire", 1, "FireSet")
    VIYC D 1 A_GunFlash
	VIYC D 1 A_WeaponReady(WRF_NOBOB|WRF_ALLOWRELOAD)
	TNT1 F 0 
    loop
  Deselect:
    TNT1 A 0 A_TakeInventory("Weight", 0)	//Determines player speed - 1 means normal speed
    TNT1 A 0 A_TakeInventory("Aiming", 1)
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    TNT1 A 0 A_TakeInventory("Reloading", 1)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 56, 0, 0)
	TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
    TNT1 A 0 A_TakeInventory("BOWeaponlooking", 1)
    TNT1 A 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    TNT1 A 0 A_JumpIfInventory("Perk1_SOH_Pro", 1, "GiveSOHDeselect")
    VIYA HGEDCBA 1
  DeselectFull: 				//Deselect
    TNT1 AA 0 A_Lower
    TNT1 A 1 A_Lower
    loop  
  Fire:
    ACRA F 0 A_JumpIfInventory("BOWeaponlooking", 1, "WeaponlookEND")
    VIYA F 0 A_JumpIfInventory("Aiming", 1, "FireAim")
    VIYA F 0 A_JumpIfNoAmmo("ReloadStart")
	TNT1 A 0 A_JumpIfInventory("Vityaz_FireSet", 1, "FireSemi")  
    VIYB A 0 A_FireCustomMissile("VityazPuff", 0, 0, 8, -3)   //Fire effect and sound
	TNT1 A 0 A_PlaySoundEx("MPX9/fire1", "SoundSlot5")
    TNT1 A 0 A_PlaySoundEx("TX15/fire2", "SoundSlot6")
	VIYB A 1 A_FireBullets(1.3, 1.6, -1, 13, "HitPuff", 1, 5400)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", 5, 0, 8, -9)
    VIYB B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 190, 190, 8)		//Recoil script - 600 recoil, revert aim
    VIYB B 1 
    VIYB CD 1 A_JumpIfNoAmmo("FireEmpty")
    VIYB A 0 A_JumpIfInventory("Ammo9mm", 1, 2)
    VIYB E 1 A_ReFire
    goto InHand
    VIYB A 0 A_JumpIfNoAmmo(2)
    VIYB A 0 A_ReFire
    goto InHand
    VIYB A 0 A_GiveInventory("VityazEmpty", 1)		//Go to reload
    goto Reload
  FireSemi:
    VIYA F 0 A_JumpIfInventory("Aiming", 1, "FireAim")
    VIYA F 0 A_JumpIfNoAmmo("ReloadStart")
    VIYB A 0 A_FireCustomMissile("VityazPuff", 0, 0, 8, -3)   //Fire effect and sound
	TNT1 A 0 A_PlaySoundEx("MPX9/fire1", "SoundSlot5")
    TNT1 A 0 A_PlaySoundEx("TX15/fire2", "SoundSlot6")
	VIYB A 1 A_FireBullets(0.5, 0.5, -1, 13, "HitPuff", 1, 5400)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", 5, 0, 8, -9)
    VIYB B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 190, 190, 8)		//Recoil script - 600 recoil, revert aim
    VIYB B 1 
    VIYB D 0 A_JumpIfNoAmmo("FireEmpty")
    VIYB A 0 A_JumpIfInventory("Ammo9mm", 1, 2)
    VIYB C 1 A_ReFire
    goto InHand
    VIYB A 0 A_JumpIfNoAmmo(2)
    VIYB A 0 A_ReFire
    goto InHand
    VIYB A 0 A_GiveInventory("VityazEmpty", 1)		//Go to reload
    goto Reload
  FireEmpty:
    VIYB D 1 
    VIYA F 1 A_PlayWeaponSound("weapon/dryfire")
    VIYB A 0 A_JumpIfNoAmmo(2)
    VIYB A 0 A_ReFire
    goto InHand
    VIYB A 0 A_GiveInventory("VityazEmpty", 1)		//Go to reload
    goto Reload
  FireAim:
    VIYC D 0 A_JumpIfNoAmmo("ReloadStart")
	TNT1 A 0 A_JumpIfInventory("Vityaz_FireSet", 1, "FireAimSemi")  
    M4AD A 0 A_FireCustomMissile("VityazPuff", 0, 0, 0, -10)   //Fire effect and sound
	TNT1 A 0 A_PlaySoundEx("MPX9/fire1", "SoundSlot5")
    TNT1 A 0 A_PlaySoundEx("TX15/fire2", "SoundSlot6")
    VIYD A 1 A_FireBullets(0.0, 0.0, -1, 13, "HitPuff", 1, 5400)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", -2, 0, 0, -10)
    M4AD B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 190, 190, 8)		//Recoil script - 600 recoil, revert aim
    VIYD BC 1 A_GunFlash
    VIYD D 1 A_JumpIfNoAmmo("FireEmptyAim")
    M4AD A 0 A_JumpIfInventory("Ammo9mm", 1, 2)
    VIYD E 1 A_ReFire
    goto InHand
    M4AD A 0 A_JumpIfNoAmmo(2)
    M4AD A 0 A_ReFire
    goto InHand
    M4AD A 0 A_GiveInventory("VityazEmpty", 1)		//Go to reload
    goto Reload
  FireAimSemi:
    VIYC D 0 A_JumpIfNoAmmo("ReloadStart")
    M4AD A 0 A_FireCustomMissile("VityazPuff", 0, 0, 0, -10)   //Fire effect and sound
	TNT1 A 0 A_PlaySoundEx("MPX9/fire1", "SoundSlot5")
    TNT1 A 0 A_PlaySoundEx("TX15/fire2", "SoundSlot6")
    VIYD B 1 A_FireBullets(0.0, 0.0, -1, 13, "HitPuff", 1, 5400)
	TNT1 A 0 A_FireCustomMissile("HGCaseSpawn", -2, 0, 0, -10)
    M4AD B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 190, 190, 8)		//Recoil script - 600 recoil, revert aim
    VIYD C 1 A_GunFlash
    M4AD D 0 A_JumpIfNoAmmo("FireEmptyAim")
    M4AD A 0 A_JumpIfInventory("Ammo9mm", 1, 2)
    VIYD D 1 A_ReFire
    goto InHand
    M4AD A 0 A_JumpIfNoAmmo(2)
    M4AD A 0 A_ReFire
    goto InHand
    M4AD A 0 A_GiveInventory("VityazEmpty", 1)		//Go to reload
    goto Reload
  FireEmptyAim:
    VIYC D 0 A_PlayWeaponSound("weapon/dryfire")
    M4AD A 0 A_JumpIfNoAmmo(2)
    M4AD A 0 A_ReFire
    goto InHand
    M4AD A 0 A_GiveInventory("VityazEmpty", 1)		//Go to reload
    goto Reload
	
  Hold:
    TNT1 A 0 A_JumpIfInventory("Vityaz_FireSet", 1, "HoldSemi")  
	VIYA F 0 A_JumpIfInventory("Aiming", 1, "HoldAim")
    VIYA F 0 A_JumpIfInventory("ThrowingGrenade", 1, "KnifeAttack")
    VIYA F 0 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	TNT1 F 0 
    goto Fire
  HoldSemi:
    M27A F 0 A_JumpIfInventory("Aiming", 1, "HoldAimSemi")
    VIYA F 1 
    M27A F 0 A_JumpIfInventory("ThrowingGrenade", 1, "KnifeAttack")
    M27A F 0 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	VIYA F 1 A_ReFire
    goto Inhand
  HoldAim:
    VIYC D 0
	TNT1 F 0 
    goto FireAim
  HoldAimSemi:
	VIYC D 1 A_GunFlash
    M27C D 0
	VIYC D 1 A_ReFire
    goto Aiming
	
	
  AltFire:	//Aim
    ACRA F 0 A_JumpIfInventory("BOWeaponlooking", 1, "WeaponlookEND")
    VIYC A 0 A_JumpIfInventory("Aiming", 1, "AltFire2")
    VIYC A 0 A_ZoomFactor(3.0)	
    TNT1 A 0 A_SetCrosshair(41)
    VIYC ABCE 1
	VIYC FG 1 A_GunFlash
    VIYC D 0 A_GiveInventory("Aiming", 1)
    VIYC D 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    VIYA F 0 A_ReFire
    goto Aiming
  AltFire2:
    VIYC D 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    VIYC G 1 
	VIYC FECBA 1
    VIYC A 0 A_TakeInventory("Aiming", 1)
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
	TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
    VIYC A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    VIYA F 0 A_ReFire
    goto InHand
	
  AltFire_QD:	//Aim with QuickDraw
    VIYC A 0 A_JumpIfInventory("Aiming", 1, "AltFire2_QD")
    VIYC A 0 A_ZoomFactor(1.4)
    TNT1 A 0 A_SetCrosshair(41)
    VIYC ABCD 1
    VIYC D 0 A_GiveInventory("Aiming", 1)
    VIYC D 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    VIYA F 0 A_ReFire
    goto Aiming
  AltFire2_QD:
    VIYC D 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    VIYC DCBA 1
    VIYC A 0 A_TakeInventory("Aiming", 1)
    VIYC A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    VIYA F 0 A_ReFire
    goto InHand
  AltHold:
    VIYA F 1 A_JumpIfInventory("Aiming", 1, "AltHoldAim")
	TNT1 F 0 
    VIYA F 1 A_ReFire
    goto InHand
  AltHoldAim:
    VIYC D 1 A_GunFlash
	TNT1 F 0 
    VIYC D 1 A_ReFire
    goto Aiming
	
  ReloadStartAim:
    VIYC G 1 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
	VIYC FECBA 1
    VIYC A 0 A_TakeInventory("Aiming", 1)
    VIYC A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    goto ReloadStart+1
  Reload:
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    TNT1 A 0 A_JumpIfInventory("VityazClip", 0, "InHand")
    TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 56, 0, 0)
    TNT1 A 0 A_JumpIfInventory("Ammo9mm", 1, "ReloadStart")
	TNT1 A 0 A_JumpIfInventory("Aiming", 1, "AltFire2")
    goto InHand+3
	
 ReloadStart:
    TNT1 A 0 A_JumpIfInventory("Perk1_SOH", 1, "GiveSOHReload")
    VIYE A 0 A_JumpIfInventory("Aiming", 1, "ReloadStartAim")
	VIYE A 0 A_JumpIfInventory("VityazEmpty", 1, "ReloadEmpty")
	VIYE E 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)
	VIYG ABC 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	VIYA C 0 A_PlayWeaponSound("Saiga9/reload1")
	VIYG CDEF 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	VIYG GH 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	VIYG IJKL 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	VIYG MNOPQRS 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	VIYE I 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)		
	VIYA C 0 A_PlayWeaponSound("Saiga9/reload2")
	VIYG TUVWXYZ 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	VIYH A 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    goto ReloadAmmo
  ReloadAmmo:
    TNT1 A 0 A_GiveInventory("VityazClip", 1)
    TNT1 A 0 A_TakeInventory("Ammo9mm", 1)
    TNT1 A 0 A_JumpIfInventory("VityazClip", 0, "ReloadEnd")
    TNT1 A 0 A_JumpIfInventory("Ammo9mm", 1, "ReloadAmmo")
    goto ReloadEnd
  ReloadEnd:
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    VIYF G 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)
	VIYF DEF 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")    
    TNT1 A 0 A_ReFire
    goto InHand
	
  ReloadEmpty:
    TNT1 A 0
    VIYG ABC 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	VIYA C 0 A_PlayWeaponSound("Saiga9/reload1")
	VIYG CDEF 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	VIYG GH 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	VIYG IJKL 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	VIYG MNOPQRS 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	VIYE I 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)		
	VIYA C 0 A_PlayWeaponSound("Saiga9/reload2")
	VIYG TUVWXYZ 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    goto ReloadAmmoEmpty
  ReloadAmmoEmpty:
    TNT1 A 0 A_GiveInventory("VityazClip", 1)
    TNT1 A 0 A_TakeInventory("Ammo9mm", 1)
    TNT1 A 0 A_JumpIfInventory("VityazClip", 30, "ReloadEndEmpty")
    TNT1 A 0 A_JumpIfInventory("Ammo9mm", 1, "ReloadAmmoEmpty")
    goto ReloadEndEmpty
  ReloadEndEmpty:
	TNT1 A 0 A_TakeInventory("VityazEmpty", 1)
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    VIYF G 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)
	VIYH ABCDEF 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	VIYA C 0 A_PlayWeaponSound("Saiga9/reload3")
	VIYH GH 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack") 
    VIYH IJKLMNOPQR 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    TNT1 A 0 A_ReFire
    goto InHand
	
  KnifeAttack:
    TNT1 A 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    TNT1 A 0 A_TakeInventory("Aiming", 1)
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    TNT1 A 0 A_JumpIfInventory("ThrowingGrenade", 1, "FragGrenade")
    TNT1 A 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 900, 900, 1)		//Recoil script
	TNT1 A 0 A_JumpIfInventory("Katana", 1, "KatanaAttack")
	TNT1 A 0 A_JumpIfInventory("Katana_Samurai", 1, "KatanaAttack")
    KNI9 A 1 A_PlaySoundEx("melee/hit", "SoundSlot5")
    KNI9 BCL 1
    KNI9 D 1 A_FireBullets(10.0, 0.0, 6, 7, "MachineGunBulletPuff", 0, 80)
    KNI9 EFGHIJ 1
    TNT1 A 5
    TNT1 A 0 A_TakeInventory("KnifeAttack", 1)
    goto Ready2+2
  KatanaAttack:
	KTNB FG 1
	KTNB H 1 A_Saw("weapons/knifeswing3", "weapons/knifehits", 40, "katanaPuff", SF_NOUSEAMMO, 80, 32)
    KTNB IJ 1 
    TNT1 A 5
	TNT1 A 0 A_TakeInventory("KnifeAttack", 1)
    goto Ready2+2
  FragGrenade:
    TNT1 A 0 A_JumpIfInventory("ThrowingStunGrenade", 1, "StunGrenade")
    TNT1 A 0 A_JumpIfInventory("ThrowingKnife", 1, "ThrowingKnife")
    FRGA ABCDEFGHI 1
    FRGA J 0 A_PlaySoundEx("grenade/pinpull", "SoundSlot5")
	FRGA JKLMOPQ 2
    FRGA ST 2
    FRGA H 0 A_PlaySoundEx("grenade/throw", "SoundSlot5")
    FRGA I 0 A_TakeInventory("FragGrenadeAmmo", 1)
    FRGA I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGA I 0 A_TakeInventory("KnifeAttack", 1)
    FRGA I 0 A_FireCustomMissile("FragGrenade", 0, 0, 0, 16)
	FRGA U 2
	FRGA VWX 2
    goto Ready2+1		//Reselect weapon
  StunGrenade:
    FRGA ABCDEFGHI 1
    FRGA F 0 A_PlaySoundEx("flash/pinpull", "SoundSlot5")
    FRGA JKLMOPQ 1
    FRGA ST 1
    FRGB H 0 A_PlaySoundEx("flash/throw", "SoundSlot5")
    FRGB I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGB I 0 A_TakeInventory("KnifeAttack", 1)
    FRGB I 0 A_TakeInventory("ThrowingStunGrenade", 1)
    FRGB C 0 A_FireCustomMissile("StunGrenadeThrown", 0, 0, 0, 16)
    FRGA U 2
	FRGA VWX 2
    goto Ready2+1		//Reselect weapon
  SemtexGrenade:
    FRGA ABCDE 3
    FRGA F 3 A_PlaySoundEx("grenade/pinpull", "SoundSlot5")
    TNT1 A 15 
    FRGA GH 3
    FRGA H 0 A_PlaySoundEx("grenade/throw", "SoundSlot5")
    FRGA I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGA I 0 A_TakeInventory("KnifeAttack", 1)
    FRGB I 0 A_TakeInventory("ThrowingSemtex", 1)
    FRGA I 3 A_FireCustomMissile("SemtexThrown", 0, 0, 0, 16)
    goto Ready+1		//Reselect weapon
  ThrowingKnife:
    FRGC AB 3
    FRGC C 3 A_PlaySoundEx("melee/swing", "SoundSlot5") 
    FRGC D 3 A_FireCustomMissile("ThrowingKnifeThrown", 0, 0, 0, 8)
    FRGC EFG 3
    TNT1 A 15 
    FRGC I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGC I 0 A_TakeInventory("KnifeAttack", 1)
    FRGC I 0 A_TakeInventory("ThrowingKnife", 1)
    goto Ready+1		//Reselect weapon
  Claymore:
    FRGD A 2 A_PlaySoundEx("claymore/click", "SoundSlot5") 
    FRGD BCDEFGHIJKLM 2
    TNT1 A 3 A_GiveInventory("ClaymoreUse", 1)
    TNT1 A 15 
    FRGC I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGC I 0 A_TakeInventory("KnifeAttack", 1)
    FRGC I 0 A_TakeInventory("ThrowingClaymore", 1)
    goto Ready+1		//Reselect weapon
  Betty:
    FRGE G 3 A_PlaySoundEx("grenade/throw", "SoundSlot5") 
    FRGE B 3 A_GiveInventory("BettyUse", 1)
    FRGE CDEF 3
    TNT1 A 15 
    FRGC I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGC I 0 A_TakeInventory("KnifeAttack", 1)
    FRGC I 0 A_TakeInventory("ThrowingBetty", 1)
    goto Ready+1		//Reselect weapon
  Flash:
    TNT1 A 0 
    SCAC X 3 BRIGHT //A_Light2
    stop
  GiveSOHSelect:
    goto Ready+3
  GiveSOHDeselect:
    goto Deselect+6
  GiveSOHReload:
    goto ReloadStart+1
  GiveQDKnife:
    goto KnifeAttack+5
  }
}