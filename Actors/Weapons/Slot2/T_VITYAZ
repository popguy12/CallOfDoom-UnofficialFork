ACTOR Vityaz_Pickup : CustomInventory
{
  inventory.pickupmessage "[2] Kalashnikov PP-19-01 Vityaz 9x19 submachine gun"
  inventory.pickupsound "nothing"
  +INVENTORY.AUTOACTIVATE
  +DONTGIB
  inventory.respawntics 35
  scale 0.16
  States
  {
  Spawn:
    B004 P -1
    Stop
  Pickup:
    GNEX A 0
	GUNP A 0 A_JumpIfInventory("Vityaz", 1, "failPickup")  //Do you have this?
	GUNP A 0 A_JumpIfInventory("Mulekick", 1, 2)         //Are you using unlimited mode?
	GUNP A 0 A_JumpIfInventory("gun3SV", 0, "notPickup") //Do you have space in your inventory?
	GUNP A 0 A_GiveInventory("gun3SV", 1) 
	TNT1 A 0 A_PlaySound("misc/w_pkup")      //Pick up!
	GUNP A 0 A_GiveInventory("Vityaz", 1)      //weapon
	GUNP A 0 A_GiveInventory("VityazClip", 30) //clip
    TNT1 A 0 A_TakeInventory("VityazEmpty", 1) //no reload
	GNEX A 0 ACS_NamedExecuteWithResult("CoDNewWeapon", 100, 0, 0)
	GUNP A 0 //A_SelectWeapon("Vityaz")
    Stop
  FailPickup:
    B004 P -1
    fail
  notPickup:
    TNT1 A 0 ACS_NamedExecuteWithResult("CoDNotPickup", 100, 0, 0)
    B004 P -1
    fail
  }
}

