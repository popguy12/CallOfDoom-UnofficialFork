actor UMP45 : RGUWeapon
{
  Obituary "%o was shot down by %k's UMP45."
  inventory.pickupmessage "[2] H&K UMP45 .45 ACP submachine gun"
  inventory.pickupsound "misc/w_pkup" 
  weapon.selectionorder 25
  tag "UMP"
  weapon.ammotype "UMP45Clip"
  weapon.ammouse 1
  weapon.ammotype2 "ammo45ACP"
  States
  {
  Spawn:
  B001 K 0
    TNT1 A 0 A_PlaySound("WeaponDropped") 
    TNT1 A 2
	TNT1 A 0 A_SpawnItemEx ("RemoveSlot2", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
	TNT1 A 0 A_SpawnItemEx ("RemoveUMP45", 0, 0, 0, 0, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
	TNT1 A 0 A_SpawnItemEx ("DropWeapon_UMP45", 20, 0, 20, 10, 0, 0, 0, SXF_NOCHECKPOSITION, 0)
    stop
  Select:
    TNT1 A 1 A_Raise
    TNT1 AA 0 A_Raise
    loop
  Ready:
   TNT1 A 0 A_TakeInventory("Weight", 0)
	TNT1 A 0 A_GiveInventory("Weight", 2)	//Determines player speed - 3 means slower speed
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 56, 0, 0)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDFireSelectIcon", 99, 0, 0)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDScopeSelectIcon", 99, 0, 0)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDFireSelect", 12, 0, 0)
	TNT1 A 0 A_TakeInventory("BOSelectScope", 1)
	TNT1 A 0 A_TakeInventory("BOSelectFire", 1)
	TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
	TNT1 A 0 A_TakeInventory("BOWeaponlooking", 1)
	TNT1 A 0 A_TakeInventory("Reloading", 1)
	TNT1 A 0 A_TakeInventory("Aiming", 1)
	GUNP A 0 //ACS_NamedExecuteWithResult("CoDWeaponIcon", 27, 0, 0)
	TNT1 A 0 A_ZoomFactor(1.0, ZOOM_INSTANT)
    TNT1 A 0 A_SetCrosshair(0)
    TNT1 A 0 A_JumpIfInventory("Perk1_SOH_Pro", 1, "GiveSOHSelect")
    UMPA A 2 A_PlayWeaponSound("weapon/select")
	UMPA BCDEGH 2
    //goto InHand 				-- intentional drop to next state
  InHand: 					//Ready state
    UMPA F 0 A_JumpIfNoAmmo("Reload")
    UMPA F 0 A_JumpIfInventory("Aiming", 1, "Aiming")
    UMPA F 0 A_JumpIfInventory("Reloading", 1, "Reload")
    UMPA F 0 A_JumpIfInventory("ThrowingGrenade", 1, "KnifeAttack")
    UMPA F 0 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	TNT1 A 0 A_JumpIfInventory("BOSelectFire", 1, "FireSet")
	TNT1 A 0 A_JumpIfInventory("BOWeaponlook", 1, "Weaponlook")
	TNT1 A 0 A_JumpIfInventory("BONVstart", 1, "NightVisionON") //
	GUNP A 0 //ACS_NamedExecuteWithResult("CoDWeaponIcon", 27, 0, 0)
    UMPA F 1 A_WeaponReady(WRF_ALLOWRELOAD)
	Goto CheckFiremode 
	
  Friendcallup:
    TNT1 A 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    TNT1 A 0 A_GiveInventory("Followcall", 1)
    TNT1 A 0 A_TakeInventory("Aiming", 1)
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    TNT1 A 0 A_PlaySound("NEEDCOME")
    FRGE IHGFGHI 2
    TNT1 A 10
    TNT1 A 0 A_TakeInventory("KnifeAttack", 1)
    TNT1 A 0 A_TakeInventory("Followcall", 1)
    TNT1 A 0 A_TakeInventory("BOFriendcall", 1)
    Goto Ready2+2
  Ready2:
    TNT1 A 0 //A_GiveInventory("Weight", 3)	
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    TNT1 A 0 A_JumpIfInventory("Perk1_SOH_Pro", 1, "GiveSOHSelect")
    TNT1 A 0 A_PlayWeaponSound("weapon/select")
    UMPA ABCDEGH 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    goto InHand

  CheckFiremode:
   UMPA F 0
   UMPA F 0 A_JumpIfInventory("UMP45_FireSet", 1, 2)
   UMPA F 0 //ACS_NamedExecuteWithResult("CoDFireSelectIcon", 1, 0, 0)//Full
   Goto CheckScopemode
   UMPA F 0 //ACS_NamedExecuteWithResult("CoDFireSelectIcon", 4, 0, 0)//Semi
   Goto CheckScopemode

  CheckScopemode:
   UMPA F 0
   UMPA F 0 //A_JumpIfInventory("AN94_Scope", 1, 2)
   UMPA F 0 //ACS_ExecuteWithResult(995, 1, 0, 0)//x3
   Goto Inhand
   UMPA F 0 //ACS_ExecuteWithResult(995, 2, 0, 0)//Dot
   Goto Inhand

  FireSet:
    TNT1 A 0 
	TNT1 A 0 A_JumpIfInventory("UMP45_FireSet", 1, "FireSetoff")   
    TNT1 A 0 A_PlaySoundEx("FAL/set", "SoundSlot5")
	//TNT1 A 0 ACS_ExecuteWithResult(894, 4, 0, 0)
	UMPA F 0 ACS_NamedExecuteWithResult("CoDFireSelect", 4, 0, 0)//Semi
	TNT1 A 0 A_TakeInventory("BOSelectFire", 1)
    TNT1 A 0 A_GiveInventory("UMP45_FireSet", 1)
    goto InHand
  FireSetoff:
    TNT1 A 0 
    TNT1 A 0 A_PlaySoundEx("FAL/set", "SoundSlot5")
	//TNT1 A 0 ACS_ExecuteWithResult(894, 1, 0, 0)
	UMPA F 0 ACS_NamedExecuteWithResult("CoDFireSelect", 1, 0, 0)//Full
	TNT1 A 0 A_TakeInventory("BOSelectFire", 1)
    TNT1 A 0 A_TakeInventory("UMP45_FireSet", 1)
    goto InHand
	
	  NightVisionON:
    TNT1 A 0 
	TNT1 A 0 A_TakeInventory("Aiming", 1)
	TNT1 A 0 A_ZoomFactor(1.0, ZOOM_INSTANT)
    TNT1 A 0 A_SetCrosshair(0)
	TNT1 A 0 A_JumpIfInventory("NightVisionActive", 1, "NightVisionOFF")   
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
    TNT1 A 0 A_PlaySoundEx("g36c/reload1", "SoundSlot5")
	BONV ABCDEFGHIJKLM 2
	BONV N 6
	TNT1 A 0 A_PlaySoundEx("BONVactive", "SoundSlot2")
	TNT1 A 0 A_GiveInventory("Infrared_COD", 1)
	TNT1 A 0 A_GiveInventory("NightVisionActive", 1)
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
    goto ready2
  NightVisionOFF:
    TNT1 A 0 
	TNT1 A 0 A_TakeInventory("Infrared_COD", 0)
	TNT1 A 0 A_TakeInventory("PowerLightAmp", 0)
	TNT1 A 0 A_TakeInventory("NightVisionActive", 0)
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
    TNT1 A 0 A_PlaySoundEx("weapon/select", "SoundSlot5")
	BONV NMLKJIHGFEDCBA 2
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
    goto ready2
	
  Weaponlook:
    TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
	TNT1 A 0 A_TakeInventory("Aiming", 1)
  Weaponlooking: 	
    TNT1 A 0 A_GiveInventory("BOWeaponlooking", 1)
    UMPA F 0 A_JumpIfInventory("Aiming", 1, "WeaponlookEND")
    UMPA F 0 A_JumpIfInventory("Reloading", 1, "WeaponlookEND")
    UMPA F 0 A_JumpIfInventory("ThrowingGrenade", 1, "WeaponlookEND")
    UMPA F 0 A_JumpIfInventory("KnifeAttack", 1, "WeaponlookEND")
	UMPA F 0 A_JumpIfInventory("BOWeaponlook", 1, "WeaponlookEND")
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 27, 0, 0)
    UMPA F 1 A_WeaponReady(WRF_ALLOWRELOAD)
    loop 
  WeaponlookEND:
    TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 56, 0, 0)
    TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
    TNT1 A 0 A_TakeInventory("BOWeaponlooking", 1)
    goto InHand
   
  Aiming:
    UMPC D 0 A_JumpIfInventory("Reloading", 1, "Reload")    
    UMPC D 0 A_JumpIfInventory("ThrowingGrenade", 1, "KnifeAttack")
    UMPC D 0 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	UMPA F 0 A_JumpIfInventory("BOSelectFire", 1, "FireSet")
	UMPC D 1 A_GunFlash
	UMPC D 1 A_WeaponReady(WRF_NOBOB|WRF_ALLOWRELOAD)
	TNT1 F 0 
    loop
  Deselect:
    TNT1 A 0 A_TakeInventory("Weight", 0)	//Determines player speed - 1 means normal speed
    TNT1 A 0 A_TakeInventory("Aiming", 1)
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    TNT1 A 0 A_TakeInventory("Reloading", 1)
	TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 56, 0, 0)
	TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
    TNT1 A 0 A_TakeInventory("BOWeaponlooking", 1)
    TNT1 A 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    TNT1 A 0 A_JumpIfInventory("Perk1_SOH_Pro", 1, "GiveSOHDeselect")
    UMPA HGEDCBA 1
  DeselectFull: 				//Deselect
    TNT1 AA 0 A_Lower
    TNT1 A 1 A_Lower
    loop  
  Fire:
    UMPA F 0 A_JumpIfInventory("BOWeaponlooking", 1, "WeaponlookEND")
    UMPA F 0 A_JumpIfInventory("Aiming", 1, "FireAim")
    UMPA F 0 A_JumpIfNoAmmo("ReloadStart")
	TNT1 A 0 A_JumpIfInventory("UMP45_FireSet", 1, "FireSemi")  
    UMPB A 0 A_FireCustomMissile("UMP45Puff", 0, 0, 9, -4)   //Fire effect and sound
	TNT1 F 0 A_PlaySoundEx("USP45/fire1", "SoundSlot5")
	TNT1 A 0 A_PlaySoundEx("TX15/fire2", "SoundSlot6")
	UMPB A 1 A_FireBullets(2.0, 2.0, -1, 45, "HitPuff", 1, 3000)
	TNT1 A 0 A_FireCustomMissile("HVHGCaseSpawn", 5, 0, 8, -9)
    UMPB B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 200, 200, 8)		//Recoil script - 600 recoil, revert aim
    UMPB B 1 
	UMPB CD 1 
    UMPB D 0 A_JumpIfNoAmmo("FireEmpty")
    UMPB A 0 A_JumpIfInventory("ammo45ACP", 1, 2)
    UMPB E 1 A_ReFire
    goto InHand
    UMPB A 0 A_JumpIfNoAmmo(2)
    UMPB A 0 A_ReFire
    goto InHand
    UMPB A 0 A_GiveInventory("UMP45Empty", 1)		//Go to reload
    goto Reload
  FireSemi:
    UMPA F 0 A_JumpIfInventory("Aiming", 1, "FireAim")
    UMPA F 0 A_JumpIfNoAmmo("ReloadStart")
    UMPB A 0 A_FireCustomMissile("UMP45Puff", 0, 0, 9, -4)   //Fire effect and sound
	TNT1 F 0 A_PlaySoundEx("USP45/fire1", "SoundSlot5")
	TNT1 A 0 A_PlaySoundEx("TX15/fire2", "SoundSlot6")
	UMPB A 1 A_FireBullets(1.6, 1.6, -1, 45, "HitPuff", 1, 3000)
	TNT1 A 0 A_FireCustomMissile("HVHGCaseSpawn", 5, 0, 8, -9)
    UMPB B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 190, 190, 8)		//Recoil script - 600 recoil, revert aim
    UMPB BC 1 
    UMPB D 0 A_JumpIfNoAmmo("FireEmpty")
    UMPB A 0 A_JumpIfInventory("ammo45ACP", 1, 2)
    UMPB E 0 A_ReFire
    goto InHand
    UMPB A 0 A_JumpIfNoAmmo(2)
    UMPB A 0 A_ReFire
    goto InHand
    UMPB A 0 A_GiveInventory("UMP45Empty", 1)		//Go to reload
    goto Reload
  FireEmpty:
    UMPB E 1 
    UMPA F 1 A_PlayWeaponSound("weapon/dryfire")
    UMPB A 0 A_JumpIfNoAmmo(2)
    UMPB A 0 A_ReFire
    goto InHand
    UMPB A 0 A_GiveInventory("UMP45Empty", 1)		//Go to reload
    goto Reload
  FireAim:
    UMPC D 0 A_JumpIfNoAmmo("ReloadStart")
	TNT1 A 0 A_JumpIfInventory("UMP45_FireSet", 1, "FireAimSemi")  
    UMPD A 0 A_FireCustomMissile("UMP45Puff", 0, 0, 0, -7)   //Fire effect and sound
	TNT1 F 0 A_PlaySoundEx("USP45/fire1", "SoundSlot5")
	TNT1 A 0 A_PlaySoundEx("TX15/fire2", "SoundSlot6")
    UMPD A 1 A_FireBullets(0.0, 0.2, -1, 45, "HitPuff", 1, 3000)
	TNT1 A 0 A_FireCustomMissile("HVHGCaseSpawn", -2, 0, 0, -8)
    UMPD B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 160, 160, 8)		//Recoil script - 600 recoil, revert aim
    UMPD B 1 A_GunFlash
	UMPD CD 1 A_GunFlash
    UMPD D 0 A_JumpIfNoAmmo("FireEmptyAim")
    UMPD A 0 A_JumpIfInventory("ammo45ACP", 1, 2)
    UMPD E 1 A_ReFire
    goto InHand
    UMPD A 0 A_JumpIfNoAmmo(2)
    UMPD A 0 A_ReFire
    goto InHand
    UMPD A 0 A_GiveInventory("UMP45Empty", 1)		//Go to reload
    goto Reload
  FireAimSemi:
    UMPC D 0 A_JumpIfNoAmmo("ReloadStart")
    UMPD A 0 A_FireCustomMissile("UMP45Puff", 0, 0, 0, -7)   //Fire effect and sound
	TNT1 F 0 A_PlaySoundEx("USP45/fire1", "SoundSlot5")
	TNT1 A 0 A_PlaySoundEx("TX15/fire2", "SoundSlot6")
    UMPD B 1 A_FireBullets(0.0, 0.0, -1, 45, "HitPuff", 1, 3000)
	TNT1 A 0 A_FireCustomMissile("HVHGCaseSpawn", -2, 0, 0, -8)
    UMPD B 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 160, 160, 8)		//Recoil script - 600 recoil, revert aim
    UMPD CD 1 A_GunFlash
    UMPD D 0 A_JumpIfNoAmmo("FireEmptyAim")
    UMPD A 0 A_JumpIfInventory("ammo45ACP", 1, 2)
    UMPD E 0 A_ReFire
    goto InHand
    UMPD A 0 A_JumpIfNoAmmo(2)
    UMPD A 0 A_ReFire
    goto InHand
    UMPD A 0 A_GiveInventory("UMP45Empty", 1)		//Go to reload
    goto Reload
  FireEmptyAim:
    UMPC D 0 A_PlayWeaponSound("weapon/dryfire")
    UMPD A 0 A_JumpIfNoAmmo(2)
    UMPD A 0 A_ReFire
    goto InHand
    UMPD A 0 A_GiveInventory("UMP45Empty", 1)		//Go to reload
    goto Reload
  Hold:
    TNT1 A 0 A_JumpIfInventory("UMP45_FireSet", 1, "HoldSemi")  
	UMPA F 0 A_JumpIfInventory("Aiming", 1, "HoldAim")
    UMPA F 0 A_JumpIfInventory("ThrowingGrenade", 1, "KnifeAttack")
    UMPA F 0 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	TNT1 F 0 
    goto Fire
  HoldSemi:
    UMPA F 0 A_JumpIfInventory("Aiming", 1, "HoldAimSemi")
    UMPA F 1 
    UMPA F 0 A_JumpIfInventory("ThrowingGrenade", 1, "KnifeAttack")
    UMPA F 0 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	UMPA F 1 A_ReFire
    goto Inhand
  HoldAim:
    UMPC D 0 A_GunFlash 
	TNT1 F 0 
    goto FireAim
  HoldAimSemi:
    UMPC D 1 A_GunFlash
    UMPC D 0
	UMPC D 1 A_ReFire
    goto Aiming
  AltFire:	//Aim
    UMPA F 0 A_JumpIfInventory("BOWeaponlooking", 1, "WeaponlookEND")
    UMPC A 0 A_JumpIfInventory("Aiming", 1, "AltFire2")
    UMPC A 0 A_ZoomFactor(1.4)
    TNT1 A 0 A_SetCrosshair(41)
    UMPC ABC 1
	UMPC E 1 A_GunFlash
    UMPC D 0 A_GiveInventory("Aiming", 1)
    UMPC D 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    UMPA F 0 A_ReFire
    goto Aiming
  AltFire2:
    UMPC D 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
	UMPC ECBA 1
    UMPC A 0 A_TakeInventory("Aiming", 1)
	TNT1 A 0 A_TakeInventory("BONVstart", 1)
	TNT1 A 0 A_TakeInventory("BOWeaponlook", 1)
    UMPC A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    UMPA F 0 A_ReFire
    goto InHand
  AltFire_QD:	//Aim with QuickDraw
    UMPC A 0 A_JumpIfInventory("Aiming", 1, "AltFire2_QD")
    UMPC A 0 A_ZoomFactor(1.4)
    TNT1 A 0 A_SetCrosshair(41)
    UMPC ABCD 1
    UMPC D 0 A_GiveInventory("Aiming", 1)
    UMPC D 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    UMPA F 0 A_ReFire
    goto Aiming
  AltFire2_QD:
    UMPC D 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    UMPC DCBA 1
    UMPC A 0 A_TakeInventory("Aiming", 1)
    UMPC A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    UMPA F 0 A_ReFire
    goto InHand
  AltHold:
    UMPA F 1 A_JumpIfInventory("Aiming", 1, "AltHoldAim")
	TNT1 F 0 
    UMPA F 1 A_ReFire
    goto InHand
  AltHoldAim:
    UMPC D 1 A_GunFlash
	TNT1 F 0 
    UMPC D 1 A_ReFire
    goto Aiming
  ReloadStartAim:
    UMPC D 1 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
	UMPC ECBA 1
    UMPC A 0 A_TakeInventory("Aiming", 1)
    UMPC A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    goto ReloadStart+1
  Reload:
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    TNT1 A 0 A_JumpIfInventory("UMP45Clip", 0, "InHand")
    TNT1 A 0 ACS_NamedExecuteWithResult("CoDWeaponLook", 56, 0, 0)
    TNT1 A 0 A_JumpIfInventory("ammo45ACP", 1, "ReloadStart")
	TNT1 A 0 A_JumpIfInventory("Aiming", 1, "AltFire2")
    goto InHand+3
	
  ReloadStart:
    TNT1 A 0 A_JumpIfInventory("Perk1_SOH", 1, "GiveSOHReload")
    UMPE A 0 A_JumpIfInventory("Aiming", 1, "ReloadStartAim")
	UMPE A 0 A_JumpIfInventory("UMP45Empty", 1, "ReloadStartEmpty")
    UMPE E 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)
    UMPE ABCDEFG 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	UMPA C 0 A_PlayWeaponSound("UMP45/reload1")
	UMPE I 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)		
	UMPE HIJKLMNOPQRSTUVWXYZ 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	UMPE I 0 A_PlayWeaponSound("UMP45/reload2")
	UMPF A 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	UMPF BCDE 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    goto ReloadAmmo
  ReloadAmmo:
    TNT1 A 0 A_GiveInventory("UMP45Clip", 1)
    TNT1 A 0 A_TakeInventory("ammo45ACP", 1)
    TNT1 A 0 A_JumpIfInventory("UMP45Clip", 0, "ReloadEnd")
    TNT1 A 0 A_JumpIfInventory("ammo45ACP", 1, "ReloadAmmo")
    goto ReloadEnd
  ReloadEnd:
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    UMPF G 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)
    UMPF FGHIJKLM 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    TNT1 A 0 A_ReFire
    goto InHand
	
  ReloadStartEmpty:
    TNT1 A 0 
    UMPE E 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)
    UMPG ABCDEF 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	UMPA C 0 A_PlayWeaponSound("UMP45/reload1")
	UMPE I 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)		
	UMPG GHIJKLMNOPQRSTUVW 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	UMPE I 0 A_PlayWeaponSound("UMP45/reload2")
	UMPG X 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	UMPG YZ 3 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	UMPH ABCD 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    UMPE I 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)
    goto ReloadAmmoEmpty
  ReloadAmmoEmpty:
    TNT1 A 0 A_GiveInventory("UMP45Clip", 1)
    TNT1 A 0 A_TakeInventory("ammo45ACP", 1)
    TNT1 A 0 A_JumpIfInventory("UMP45Clip", 25, "ReloadEndEmpty")
    TNT1 A 0 A_JumpIfInventory("ammo45ACP", 1, "ReloadAmmoEmpty")
    goto ReloadEndEmpty
  ReloadEndEmpty:
    TNT1 A 0 A_TakeInventory("UMP45Empty", 1)
    TNT1 A 0 A_TakeInventory("Reloading", 1)
	UMPG F 0 A_PlayWeaponSound("UMP45/reload3")
	UMPH EF 3 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	UMPH GH 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
	UMPH IJKLM 2 A_JumpIfInventory("KnifeAttack", 1, "KnifeAttack")
    UMPF G 0 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)
    TNT1 A 0 A_ReFire
    goto InHand
	
  KnifeAttack:
    TNT1 A 0 A_ZoomFactor(1.0)
    TNT1 A 0 A_SetCrosshair(0)
    TNT1 A 0 A_TakeInventory("Aiming", 1)
    TNT1 A 0 A_TakeInventory("Reloading", 1)
    TNT1 A 0 ACS_NamedExecuteAlways("CoDPlayerSpeed", 0, 0, 0, 0)
    TNT1 A 0 A_JumpIfInventory("ThrowingGrenade", 1, "FragGrenade")
    TNT1 A 0 ACS_NamedExecuteAlways("CoDRecoil", 0, 900, 900, 1)		//Recoil script
	TNT1 A 0 A_JumpIfInventory("Katana", 1, "KatanaAttack")
	TNT1 A 0 A_JumpIfInventory("Katana_Samurai", 1, "KatanaAttack")
    KNI9 A 1 A_PlaySoundEx("melee/hit", "SoundSlot5")
    KNI9 BCL 1
    KNI9 D 1 A_FireBullets(10.0, 0.0, 6, 7, "MachineGunBulletPuff", 0, 80)
    KNI9 EFGHIJ 1
    TNT1 A 5
    TNT1 A 0 A_TakeInventory("KnifeAttack", 1)
    goto Ready2+2
  KatanaAttack:
	KTNB FG 1
	KTNB H 1 A_Saw("weapons/knifeswing3", "weapons/knifehits", 40, "katanaPuff", SF_NOUSEAMMO, 80, 32)
    KTNB IJ 1 
    TNT1 A 5
	TNT1 A 0 A_TakeInventory("KnifeAttack", 1)
    goto Ready2+2
  FragGrenade:
    TNT1 A 0 A_JumpIfInventory("ThrowingStunGrenade", 1, "StunGrenade")
    TNT1 A 0 A_JumpIfInventory("ThrowingKnife", 1, "ThrowingKnife")
    FRGA ABCDEFGHI 1
    FRGA J 0 A_PlaySoundEx("grenade/pinpull", "SoundSlot5")
	FRGA JKLMOPQ 2
    FRGA ST 2
    FRGA H 0 A_PlaySoundEx("grenade/throw", "SoundSlot5")
    FRGA I 0 A_TakeInventory("FragGrenadeAmmo", 1)
    FRGA I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGA I 0 A_TakeInventory("KnifeAttack", 1)
    FRGA I 0 A_FireCustomMissile("FragGrenade", 0, 0, 0, 16)
	FRGA U 2
	FRGA VWX 2
    goto Ready2+1		//Reselect weapon
  StunGrenade:
    FRGA ABCDEFGHI 1
    FRGA F 0 A_PlaySoundEx("flash/pinpull", "SoundSlot5")
    FRGA JKLMOPQ 1
    FRGA ST 1
    FRGB H 0 A_PlaySoundEx("flash/throw", "SoundSlot5")
    FRGB I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGB I 0 A_TakeInventory("KnifeAttack", 1)
    FRGB I 0 A_TakeInventory("ThrowingStunGrenade", 1)
    FRGB C 0 A_FireCustomMissile("StunGrenadeThrown", 0, 0, 0, 16)
    FRGA U 2
	FRGA VWX 2
    goto Ready2+1		//Reselect weapon
  SemtexGrenade:
    FRGA ABCDE 3
    FRGA F 3 A_PlaySoundEx("grenade/pinpull", "SoundSlot5")
    TNT1 A 15 
    FRGA GH 3
    FRGA H 0 A_PlaySoundEx("grenade/throw", "SoundSlot5")
    FRGA I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGA I 0 A_TakeInventory("KnifeAttack", 1)
    FRGB I 0 A_TakeInventory("ThrowingSemtex", 1)
    FRGA I 3 A_FireCustomMissile("SemtexThrown", 0, 0, 0, 16)
    goto Ready+1		//Reselect weapon
  ThrowingKnife:
    FRGC AB 3
    FRGC C 3 A_PlaySoundEx("melee/swing", "SoundSlot5") 
    FRGC D 3 A_FireCustomMissile("ThrowingKnifeThrown", 0, 0, 0, 8)
    FRGC EFG 3
    TNT1 A 15 
    FRGC I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGC I 0 A_TakeInventory("KnifeAttack", 1)
    FRGC I 0 A_TakeInventory("ThrowingKnife", 1)
    goto Ready+1		//Reselect weapon
  Claymore:
    FRGD A 2 A_PlaySoundEx("claymore/click", "SoundSlot5") 
    FRGD BCDEFGHIJKLM 2
    TNT1 A 3 A_GiveInventory("ClaymoreUse", 1)
    TNT1 A 15 
    FRGC I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGC I 0 A_TakeInventory("KnifeAttack", 1)
    FRGC I 0 A_TakeInventory("ThrowingClaymore", 1)
    goto Ready+1		//Reselect weapon
  Betty:
    FRGE G 3 A_PlaySoundEx("grenade/throw", "SoundSlot5") 
    FRGE B 3 A_GiveInventory("BettyUse", 1)
    FRGE CDEF 3
    TNT1 A 15 
    FRGC I 0 A_TakeInventory("ThrowingGrenade", 1)
    FRGC I 0 A_TakeInventory("KnifeAttack", 1)
    FRGC I 0 A_TakeInventory("ThrowingBetty", 1)
    goto Ready+1		//Reselect weapon
  Flash:
    TNT1 A 0 
    G36C X 3 BRIGHT //A_Light2
    stop
  GiveSOHSelect:
    goto Ready+3
  GiveSOHDeselect:
    goto Deselect+6
  GiveSOHReload:
    goto ReloadStart+1
  GiveQDKnife:
    goto KnifeAttack+5
  }
}