ACTOR UMP45_Pickup : CustomInventory
{
  inventory.pickupmessage "[2] H&K UMP .45 ACP submachine gun"
  inventory.pickupsound "nothing"
  +INVENTORY.AUTOACTIVATE
  +DONTGIB
  inventory.respawntics 35
  scale 0.16
  States
  {
  Spawn:
    B001 K -1
    Stop
  Pickup:
    GNEX A 0
	GUNP A 0 A_JumpIfInventory("UMP45", 1, "failPickup")  //Do you have this?
	GUNP A 0 A_JumpIfInventory("Mulekick", 1, 2)         //Are you using unlimited mode?
	GUNP A 0 A_JumpIfInventory("gun3SV", 0, "notPickup") //Do you have space in your inventory?
	GUNP A 0 A_GiveInventory("gun3SV", 1) 
	TNT1 A 0 A_PlaySound("misc/w_pkup")      //Pick up!
	GUNP A 0 A_GiveInventory("UMP45", 1)      //weapon
	GUNP A 0 A_GiveInventory("UMP45Clip", 25) //clip
    TNT1 A 0 A_TakeInventory("UMP45Empty", 1) //no reload
	GNEX A 0 ACS_NamedExecuteWithResult("CoDNewWeapon", 27, 0, 0)
	GUNP A 0 //A_SelectWeapon("UMP45")
    Stop
  FailPickup:
    B001 K -1
    fail
  notPickup:
    TNT1 A 0 ACS_NamedExecuteWithResult("CoDNotPickup", 27, 0, 0)
    B001 K -1
    fail
  }
}

